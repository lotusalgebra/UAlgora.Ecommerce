@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.Models.PublishedContent
@{
    Layout = "_Layout";

    // Hero Section - CMS Managed
    var heroImage = Model.Value<IPublishedContent>("heroImage");
    var heroTitle = Model.Value<string>("heroTitle") ?? "Join the<br>Club<span class=\"text-gold\">.</span>";
    var heroSubtitle = Model.Value<string>("heroSubtitle") ?? "Create an account and unlock exclusive perks designed for fashion lovers like you.";
    var heroGradientFrom = Model.Value<string>("heroGradientFrom") ?? "accent-500";
    var heroGradientTo = Model.Value<string>("heroGradientTo") ?? "primary-500";

    // Benefits - CMS Managed
    var benefitsEnabled = Model.Value<bool>("benefitsEnabled");
    var benefit1Title = Model.Value<string>("benefit1Title") ?? "15% Off First Order";
    var benefit1Description = Model.Value<string>("benefit1Description") ?? "Use code WELCOME15 at checkout";
    var benefit2Title = Model.Value<string>("benefit2Title") ?? "Free Shipping";
    var benefit2Description = Model.Value<string>("benefit2Description") ?? "On orders over $50";
    var benefit3Title = Model.Value<string>("benefit3Title") ?? "Early Access";
    var benefit3Description = Model.Value<string>("benefit3Description") ?? "Be first to shop new collections";
    var benefit4Title = Model.Value<string>("benefit4Title") ?? "Wishlist & Saves";
    var benefit4Description = Model.Value<string>("benefit4Description") ?? "Save favorites across devices";

    // Form Content - CMS Managed
    var formTitle = Model.Value<string>("formTitle") ?? "Create Account<span class=\"text-primary-500\">.</span>";
    var formSubtitle = Model.Value<string>("formSubtitle") ?? "Join us and start your fashion journey today.";
    var firstNameLabel = Model.Value<string>("firstNameLabel") ?? "First Name";
    var lastNameLabel = Model.Value<string>("lastNameLabel") ?? "Last Name";
    var emailLabel = Model.Value<string>("emailLabel") ?? "Email Address";
    var passwordLabel = Model.Value<string>("passwordLabel") ?? "Password (min. 8 characters)";
    var confirmPasswordLabel = Model.Value<string>("confirmPasswordLabel") ?? "Confirm Password";
    var submitButtonText = Model.Value<string>("submitButtonText") ?? "Create Account";
    var loadingText = Model.Value<string>("loadingText") ?? "Creating account...";

    // Social Signup - CMS Managed
    var enableGoogleSignup = Model.Value<bool>("enableGoogleSignup");
    var enableAppleSignup = Model.Value<bool>("enableAppleSignup");
    var enableFacebookSignup = Model.Value<bool>("enableFacebookSignup");
    var socialDividerText = Model.Value<string>("socialDividerText") ?? "Or register with email";
    var hasSocialSignup = enableGoogleSignup || enableAppleSignup || enableFacebookSignup;

    // Links - CMS Managed
    var termsText = Model.Value<string>("termsText") ?? "I agree to the";
    var termsLinkText = Model.Value<string>("termsLinkText") ?? "Terms of Service";
    var termsUrl = Model.Value<string>("termsUrl") ?? "/terms";
    var privacyLinkText = Model.Value<string>("privacyLinkText") ?? "Privacy Policy";
    var privacyUrl = Model.Value<string>("privacyUrl") ?? "/privacy";
    var marketingOptInText = Model.Value<string>("marketingOptInText") ?? "Send me exclusive offers and new arrivals";
    var loginPrompt = Model.Value<string>("loginPrompt") ?? "Already have an account?";
    var loginLinkText = Model.Value<string>("loginLinkText") ?? "Sign in";

    // SEO
    var metaTitle = Model.Value<string>("metaTitle") ?? "Create Account";
    var metaDescription = Model.Value<string>("metaDescription") ?? "Create your account and start shopping";
    ViewData["Title"] = metaTitle;
    ViewData["MetaDescription"] = metaDescription;
}

<div class="min-h-screen flex dark:bg-fashion-black">
    <!-- Left Side - Fashion Image with Benefits -->
    <div class="hidden lg:flex lg:w-1/2 relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-@(heroGradientFrom)/90 via-primary-600/80 to-@(heroGradientTo)/90"></div>
        @if (heroImage != null)
        {
            <img src="@heroImage.Url()" alt="Register" class="absolute inset-0 w-full h-full object-cover mix-blend-overlay">
        }
        else
        {
            <img src="https://images.unsplash.com/photo-1469334031218-e382a71b716b?w=1200&auto=format&fit=crop"
                 alt="Fashion" class="absolute inset-0 w-full h-full object-cover mix-blend-overlay">
        }

        <!-- Overlay Content -->
        <div class="relative z-10 flex flex-col justify-between p-12 text-white">
            <!-- Logo -->
            <a href="/" class="flex items-center gap-3">
                <div class="w-12 h-12 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center">
                    <span class="text-white font-display text-xl font-bold">A</span>
                </div>
                <span class="font-display text-2xl font-bold tracking-wide">ALGORA</span>
            </a>

            <!-- Hero Text & Benefits -->
            <div class="max-w-md">
                <h1 class="font-display text-5xl font-bold leading-tight mb-6">
                    @Html.Raw(heroTitle)
                </h1>
                <p class="text-lg text-white/80 leading-relaxed mb-8">
                    @heroSubtitle
                </p>

                @if (benefitsEnabled)
                {
                    <!-- Membership Benefits -->
                    <div class="space-y-4">
                        <div class="flex items-center gap-4">
                            <div class="w-12 h-12 rounded-full bg-white/20 backdrop-blur-sm flex items-center justify-center">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"/>
                                </svg>
                            </div>
                            <div>
                                <p class="font-medium">@benefit1Title</p>
                                <p class="text-sm text-white/60">@benefit1Description</p>
                            </div>
                        </div>
                        <div class="flex items-center gap-4">
                            <div class="w-12 h-12 rounded-full bg-white/20 backdrop-blur-sm flex items-center justify-center">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
                                </svg>
                            </div>
                            <div>
                                <p class="font-medium">@benefit2Title</p>
                                <p class="text-sm text-white/60">@benefit2Description</p>
                            </div>
                        </div>
                        <div class="flex items-center gap-4">
                            <div class="w-12 h-12 rounded-full bg-white/20 backdrop-blur-sm flex items-center justify-center">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                                </svg>
                            </div>
                            <div>
                                <p class="font-medium">@benefit3Title</p>
                                <p class="text-sm text-white/60">@benefit3Description</p>
                            </div>
                        </div>
                        <div class="flex items-center gap-4">
                            <div class="w-12 h-12 rounded-full bg-white/20 backdrop-blur-sm flex items-center justify-center">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                                </svg>
                            </div>
                            <div>
                                <p class="font-medium">@benefit4Title</p>
                                <p class="text-sm text-white/60">@benefit4Description</p>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Stats -->
            <div class="flex gap-8">
                <div>
                    <p class="font-display text-3xl font-bold">500K+</p>
                    <p class="text-sm text-white/60">Happy Members</p>
                </div>
                <div>
                    <p class="font-display text-3xl font-bold">4.9</p>
                    <p class="text-sm text-white/60">App Rating</p>
                </div>
                <div>
                    <p class="font-display text-3xl font-bold">50+</p>
                    <p class="text-sm text-white/60">Designer Brands</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Side - Register Form -->
    <div class="w-full lg:w-1/2 flex items-center justify-center px-6 py-12 sm:px-12 bg-white dark:bg-fashion-black overflow-y-auto">
        <div class="w-full max-w-md">
            <!-- Mobile Logo -->
            <div class="lg:hidden text-center mb-8">
                <a href="/" class="inline-flex items-center gap-3">
                    <div class="w-10 h-10 bg-gradient-to-br from-primary-500 to-accent-500 rounded-full flex items-center justify-center">
                        <span class="text-white font-display text-lg font-bold">A</span>
                    </div>
                    <span class="font-display text-xl font-bold text-fashion-black dark:text-white">ALGORA</span>
                </a>
            </div>

            <!-- Header -->
            <div class="mb-8">
                <h2 class="font-display text-3xl font-bold text-fashion-black dark:text-white">
                    @Html.Raw(formTitle)
                </h2>
                <p class="mt-2 text-gray-600 dark:text-gray-400">
                    @formSubtitle
                </p>
            </div>

            @if (hasSocialSignup)
            {
                <!-- Social Register -->
                <div class="grid grid-cols-2 gap-3 mb-6">
                    @if (enableGoogleSignup)
                    {
                        <button class="flex items-center justify-center gap-2 px-4 py-3 border border-gray-300 dark:border-gray-700 text-fashion-black dark:text-white hover:bg-gray-50 dark:hover:bg-fashion-charcoal transition">
                            <svg class="w-5 h-5" viewBox="0 0 24 24">
                                <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                                <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                                <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                                <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                            </svg>
                            <span class="text-sm font-medium">Google</span>
                        </button>
                    }
                    @if (enableAppleSignup)
                    {
                        <button class="flex items-center justify-center gap-2 px-4 py-3 bg-black text-white hover:bg-gray-800 transition">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M17.05 20.28c-.98.95-2.05.8-3.08.35-1.09-.46-2.09-.48-3.24 0-1.44.62-2.2.44-3.06-.35C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z"/>
                            </svg>
                            <span class="text-sm font-medium">Apple</span>
                        </button>
                    }
                    @if (enableFacebookSignup)
                    {
                        <button class="flex items-center justify-center gap-2 px-4 py-3 bg-[#1877F2] text-white hover:bg-[#166FE5] transition">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                            </svg>
                            <span class="text-sm font-medium">Facebook</span>
                        </button>
                    }
                </div>

                <div class="relative mb-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-200 dark:border-gray-700"></div>
                    </div>
                    <div class="relative flex justify-center">
                        <span class="px-4 bg-white dark:bg-fashion-black text-xs text-gray-400 uppercase tracking-wider">@socialDividerText</span>
                    </div>
                </div>
            }

            <!-- Register Form -->
            <form class="space-y-5" x-data="registerForm()" x-on:submit.prevent="submit">
                <!-- Error Message -->
                <div x-show="error" x-cloak class="p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 text-red-700 dark:text-red-400 text-sm">
                    <span x-text="error"></span>
                </div>

                <!-- Name Fields -->
                <div class="grid grid-cols-2 gap-4">
                    <div class="relative">
                        <input type="text" x-model="firstName" id="firstName" required
                               class="peer w-full px-4 pt-6 pb-2 border border-gray-300 dark:border-gray-700 bg-transparent text-fashion-black dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition placeholder-transparent"
                               placeholder="First Name">
                        <label for="firstName" class="absolute left-4 top-2 text-xs text-gray-500 dark:text-gray-400 transition-all peer-placeholder-shown:top-4 peer-placeholder-shown:text-base peer-focus:top-2 peer-focus:text-xs peer-focus:text-primary-600">
                            @firstNameLabel
                        </label>
                    </div>
                    <div class="relative">
                        <input type="text" x-model="lastName" id="lastName" required
                               class="peer w-full px-4 pt-6 pb-2 border border-gray-300 dark:border-gray-700 bg-transparent text-fashion-black dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition placeholder-transparent"
                               placeholder="Last Name">
                        <label for="lastName" class="absolute left-4 top-2 text-xs text-gray-500 dark:text-gray-400 transition-all peer-placeholder-shown:top-4 peer-placeholder-shown:text-base peer-focus:top-2 peer-focus:text-xs peer-focus:text-primary-600">
                            @lastNameLabel
                        </label>
                    </div>
                </div>

                <!-- Email -->
                <div class="relative">
                    <input type="email" x-model="email" id="email" required
                           class="peer w-full px-4 pt-6 pb-2 border border-gray-300 dark:border-gray-700 bg-transparent text-fashion-black dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition placeholder-transparent"
                           placeholder="Email">
                    <label for="email" class="absolute left-4 top-2 text-xs text-gray-500 dark:text-gray-400 transition-all peer-placeholder-shown:top-4 peer-placeholder-shown:text-base peer-focus:top-2 peer-focus:text-xs peer-focus:text-primary-600">
                        @emailLabel
                    </label>
                </div>

                <!-- Password -->
                <div class="relative">
                    <input :type="showPassword ? 'text' : 'password'" x-model="password" id="password" required minlength="8"
                           class="peer w-full px-4 pt-6 pb-2 pr-12 border border-gray-300 dark:border-gray-700 bg-transparent text-fashion-black dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition placeholder-transparent"
                           placeholder="Password">
                    <label for="password" class="absolute left-4 top-2 text-xs text-gray-500 dark:text-gray-400 transition-all peer-placeholder-shown:top-4 peer-placeholder-shown:text-base peer-focus:top-2 peer-focus:text-xs peer-focus:text-primary-600">
                        @passwordLabel
                    </label>
                    <button type="button" x-on:click="showPassword = !showPassword" class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                        <svg x-show="!showPassword" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                        <svg x-show="showPassword" x-cloak class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"/>
                        </svg>
                    </button>
                </div>

                <!-- Password Strength Indicator -->
                <div x-show="password.length > 0" class="space-y-2">
                    <div class="flex gap-1">
                        <div class="h-1 flex-1 rounded-full transition-colors" :class="password.length >= 1 ? 'bg-accent-500' : 'bg-gray-200 dark:bg-gray-700'"></div>
                        <div class="h-1 flex-1 rounded-full transition-colors" :class="password.length >= 4 ? 'bg-accent-500' : 'bg-gray-200 dark:bg-gray-700'"></div>
                        <div class="h-1 flex-1 rounded-full transition-colors" :class="password.length >= 8 ? 'bg-primary-500' : 'bg-gray-200 dark:bg-gray-700'"></div>
                        <div class="h-1 flex-1 rounded-full transition-colors" :class="password.length >= 12 && /[A-Z]/.test(password) && /[0-9]/.test(password) ? 'bg-green-500' : 'bg-gray-200 dark:bg-gray-700'"></div>
                    </div>
                    <p class="text-xs text-gray-500 dark:text-gray-400" x-text="password.length < 8 ? 'Use 8+ characters' : password.length < 12 ? 'Good password' : /[A-Z]/.test(password) && /[0-9]/.test(password) ? 'Strong password!' : 'Add numbers & capitals for strength'"></p>
                </div>

                <!-- Confirm Password -->
                <div class="relative">
                    <input :type="showPassword ? 'text' : 'password'" x-model="confirmPassword" id="confirmPassword" required
                           class="peer w-full px-4 pt-6 pb-2 border border-gray-300 dark:border-gray-700 bg-transparent text-fashion-black dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition placeholder-transparent"
                           :class="confirmPassword.length > 0 && password !== confirmPassword ? 'border-accent-500 focus:ring-accent-500' : ''"
                           placeholder="Confirm Password">
                    <label for="confirmPassword" class="absolute left-4 top-2 text-xs text-gray-500 dark:text-gray-400 transition-all peer-placeholder-shown:top-4 peer-placeholder-shown:text-base peer-focus:top-2 peer-focus:text-xs peer-focus:text-primary-600">
                        @confirmPasswordLabel
                    </label>
                    <div class="absolute right-4 top-1/2 -translate-y-1/2" x-show="confirmPassword.length > 0">
                        <svg x-show="password === confirmPassword" class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        <svg x-show="password !== confirmPassword" x-cloak class="w-5 h-5 text-accent-500" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                        </svg>
                    </div>
                </div>

                <!-- Checkboxes -->
                <div class="space-y-3 pt-2">
                    <label class="flex items-start gap-3 cursor-pointer group">
                        <input type="checkbox" x-model="termsAccepted" required class="w-5 h-5 mt-0.5 rounded border-gray-300 text-fashion-black focus:ring-fashion-black">
                        <span class="text-sm text-gray-600 dark:text-gray-400">
                            @termsText <a href="@termsUrl" class="text-primary-600 dark:text-primary-400 hover:underline">@termsLinkText</a>
                            and <a href="@privacyUrl" class="text-primary-600 dark:text-primary-400 hover:underline">@privacyLinkText</a>
                        </span>
                    </label>
                    <label class="flex items-center gap-3 cursor-pointer group">
                        <input type="checkbox" x-model="acceptsMarketing" class="w-5 h-5 rounded border-gray-300 text-fashion-black focus:ring-fashion-black" checked>
                        <span class="text-sm text-gray-600 dark:text-gray-400 group-hover:text-fashion-black dark:group-hover:text-white transition">
                            @marketingOptInText
                        </span>
                    </label>
                </div>

                <!-- Submit -->
                <button type="submit" :disabled="loading || password !== confirmPassword" class="w-full bg-fashion-black dark:bg-white text-white dark:text-fashion-black py-4 text-sm uppercase tracking-widest font-medium hover:bg-primary-600 dark:hover:bg-primary-400 hover:text-white transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
                    <span x-show="!loading">@submitButtonText</span>
                    <span x-show="loading" x-cloak class="flex items-center justify-center gap-2">
                        <svg class="animate-spin h-4 w-4" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                        @loadingText
                    </span>
                </button>
            </form>

            <script>
                function registerForm() {
                    return {
                        firstName: '',
                        lastName: '',
                        email: '',
                        password: '',
                        confirmPassword: '',
                        termsAccepted: false,
                        acceptsMarketing: true,
                        showPassword: false,
                        loading: false,
                        error: null,

                        async submit() {
                            if (this.password !== this.confirmPassword) {
                                this.error = 'Passwords do not match.';
                                return;
                            }

                            if (this.password.length < 8) {
                                this.error = 'Password must be at least 8 characters.';
                                return;
                            }

                            if (!this.termsAccepted) {
                                this.error = 'You must accept the Terms of Service.';
                                return;
                            }

                            this.loading = true;
                            this.error = null;

                            try {
                                const response = await fetch('/api/ecommerce/auth/register', {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json'
                                    },
                                    body: JSON.stringify({
                                        firstName: this.firstName,
                                        lastName: this.lastName,
                                        email: this.email,
                                        password: this.password,
                                        acceptsMarketing: this.acceptsMarketing
                                    })
                                });

                                const data = await response.json();

                                if (data.success) {
                                    window.location.href = '/account';
                                } else {
                                    this.error = data.message || 'Registration failed. Please try again.';
                                }
                            } catch (err) {
                                this.error = 'An error occurred. Please try again.';
                                console.error('Registration error:', err);
                            } finally {
                                this.loading = false;
                            }
                        }
                    };
                }
            </script>

            <!-- Login Link -->
            <div class="mt-8 text-center">
                <p class="text-gray-600 dark:text-gray-400">
                    @loginPrompt
                    <a href="/login" class="text-fashion-black dark:text-white font-medium hover:text-primary-600 dark:hover:text-primary-400 transition underline decoration-2 decoration-primary-400 underline-offset-4">@loginLinkText</a>
                </p>
            </div>
        </div>
    </div>
</div>
