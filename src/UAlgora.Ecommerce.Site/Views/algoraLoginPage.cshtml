@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.Models.PublishedContent
@{
    Layout = "_Layout";

    // Get return URL from query string
    var returnUrl = Context.Request.Query["returnUrl"].FirstOrDefault() ?? "/account";

    // Hero Section - CMS Managed
    var heroImage = Model.Value<IPublishedContent>("heroImage");
    var heroTitle = Model.Value<string>("heroTitle") ?? "Welcome<br>Back<span class=\"text-accent-300\">.</span>";
    var heroSubtitle = Model.Value<string>("heroSubtitle") ?? "Sign in to access your account, track orders, and discover new arrivals curated just for you.";
    var heroGradientFrom = Model.Value<string>("heroGradientFrom") ?? "primary-500";
    var heroGradientTo = Model.Value<string>("heroGradientTo") ?? "accent-500";

    // Form Content - CMS Managed
    var formTitle = Model.Value<string>("formTitle") ?? "Sign In<span class=\"text-primary-500\">.</span>";
    var formSubtitle = Model.Value<string>("formSubtitle") ?? "Welcome back! Please enter your details.";
    var emailLabel = Model.Value<string>("emailLabel") ?? "Email Address";
    var passwordLabel = Model.Value<string>("passwordLabel") ?? "Password";
    var rememberMeLabel = Model.Value<string>("rememberMeLabel") ?? "Remember me";
    var submitButtonText = Model.Value<string>("submitButtonText") ?? "Sign In";
    var loadingText = Model.Value<string>("loadingText") ?? "Signing in...";

    // Testimonial - CMS Managed
    var testimonialEnabled = Model.Value<bool>("testimonialEnabled");
    var testimonialText = Model.Value<string>("testimonialText") ?? "The best fashion shopping experience I've ever had. Fast shipping and amazing quality!";
    var testimonialAuthor = Model.Value<string>("testimonialAuthor") ?? "Sarah Johnson";
    var testimonialRole = Model.Value<string>("testimonialRole") ?? "Verified Customer";
    var testimonialRating = Model.Value<int>("testimonialRating");
    if (testimonialRating <= 0) testimonialRating = 5;

    // Social Login - CMS Managed
    var enableGoogleLogin = Model.Value<bool>("enableGoogleLogin");
    var enableAppleLogin = Model.Value<bool>("enableAppleLogin");
    var enableFacebookLogin = Model.Value<bool>("enableFacebookLogin");
    var socialDividerText = Model.Value<string>("socialDividerText") ?? "Or continue with email";
    var hasSocialLogin = enableGoogleLogin || enableAppleLogin || enableFacebookLogin;

    // Links - CMS Managed
    var forgotPasswordText = Model.Value<string>("forgotPasswordText") ?? "Forgot password?";
    var forgotPasswordUrl = Model.Value<string>("forgotPasswordUrl") ?? "/forgot-password";
    var registerPrompt = Model.Value<string>("registerPrompt") ?? "Don't have an account?";
    var registerLinkText = Model.Value<string>("registerLinkText") ?? "Create one";
    var guestCheckoutEnabled = Model.Value<bool>("guestCheckoutEnabled");
    var guestCheckoutText = Model.Value<string>("guestCheckoutText") ?? "Continue as guest";

    // SEO
    var metaTitle = Model.Value<string>("metaTitle") ?? "Login";
    var metaDescription = Model.Value<string>("metaDescription") ?? "Sign in to your account";
    ViewData["Title"] = metaTitle;
    ViewData["MetaDescription"] = metaDescription;
}

<div class="min-h-screen flex dark:bg-fashion-black">
    <!-- Left Side - Fashion Image -->
    <div class="hidden lg:flex lg:w-1/2 relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-@(heroGradientFrom)/90 via-primary-600/80 to-@(heroGradientTo)/90"></div>
        @if (heroImage != null)
        {
            <img src="@heroImage.Url()" alt="Login" class="absolute inset-0 w-full h-full object-cover mix-blend-overlay">
        }
        else
        {
            <img src="https://images.unsplash.com/photo-1558618666-fcd25c85cd64?w=1200&auto=format&fit=crop"
                 alt="Fashion" class="absolute inset-0 w-full h-full object-cover mix-blend-overlay">
        }

        <!-- Overlay Content -->
        <div class="relative z-10 flex flex-col justify-between p-12 text-white">
            <!-- Logo -->
            <a href="/" class="flex items-center gap-3">
                <div class="w-12 h-12 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center">
                    <span class="text-white font-display text-xl font-bold">A</span>
                </div>
                <span class="font-display text-2xl font-bold tracking-wide">ALGORA</span>
            </a>

            <!-- Hero Text -->
            <div class="max-w-md">
                <h1 class="font-display text-5xl font-bold leading-tight mb-6">
                    @Html.Raw(heroTitle)
                </h1>
                <p class="text-lg text-white/80 leading-relaxed">
                    @heroSubtitle
                </p>
            </div>

            <!-- Testimonial -->
            @if (testimonialEnabled)
            {
                <div class="max-w-sm">
                    <div class="flex items-center gap-1 mb-4">
                        @for (int i = 0; i < testimonialRating; i++)
                        {
                            <svg class="w-5 h-5 text-gold" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                        }
                    </div>
                    <blockquote class="text-white/90 italic mb-4">
                        "@testimonialText"
                    </blockquote>
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-full bg-white/20 flex items-center justify-center text-sm font-medium">
                            @(string.Join("", testimonialAuthor.Split(' ').Take(2).Select(n => n.FirstOrDefault().ToString().ToUpper())))
                        </div>
                        <div>
                            <p class="font-medium">@testimonialAuthor</p>
                            <p class="text-sm text-white/60">@testimonialRole</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Right Side - Login Form -->
    <div class="w-full lg:w-1/2 flex items-center justify-center px-6 py-12 sm:px-12 bg-white dark:bg-fashion-black">
        <div class="w-full max-w-md">
            <!-- Mobile Logo -->
            <div class="lg:hidden text-center mb-8">
                <a href="/" class="inline-flex items-center gap-3">
                    <div class="w-10 h-10 bg-gradient-to-br from-primary-500 to-accent-500 rounded-full flex items-center justify-center">
                        <span class="text-white font-display text-lg font-bold">A</span>
                    </div>
                    <span class="font-display text-xl font-bold text-fashion-black dark:text-white">ALGORA</span>
                </a>
            </div>

            <!-- Header -->
            <div class="mb-8">
                <h2 class="font-display text-3xl font-bold text-fashion-black dark:text-white">
                    @Html.Raw(formTitle)
                </h2>
                <p class="mt-2 text-gray-600 dark:text-gray-400">
                    @formSubtitle
                </p>
            </div>

            @if (hasSocialLogin)
            {
                <!-- Social Login -->
                <div class="grid grid-cols-2 gap-3 mb-6">
                    @if (enableGoogleLogin)
                    {
                        <button class="flex items-center justify-center gap-2 px-4 py-3 border border-gray-300 dark:border-gray-700 text-fashion-black dark:text-white hover:bg-gray-50 dark:hover:bg-fashion-charcoal transition">
                            <svg class="w-5 h-5" viewBox="0 0 24 24">
                                <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                                <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                                <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                                <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                            </svg>
                            <span class="text-sm font-medium">Google</span>
                        </button>
                    }
                    @if (enableAppleLogin)
                    {
                        <button class="flex items-center justify-center gap-2 px-4 py-3 bg-black text-white hover:bg-gray-800 transition">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M17.05 20.28c-.98.95-2.05.8-3.08.35-1.09-.46-2.09-.48-3.24 0-1.44.62-2.2.44-3.06-.35C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z"/>
                            </svg>
                            <span class="text-sm font-medium">Apple</span>
                        </button>
                    }
                    @if (enableFacebookLogin)
                    {
                        <button class="flex items-center justify-center gap-2 px-4 py-3 bg-[#1877F2] text-white hover:bg-[#166FE5] transition">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                            </svg>
                            <span class="text-sm font-medium">Facebook</span>
                        </button>
                    }
                </div>

                <div class="relative mb-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-200 dark:border-gray-700"></div>
                    </div>
                    <div class="relative flex justify-center">
                        <span class="px-4 bg-white dark:bg-fashion-black text-xs text-gray-400 uppercase tracking-wider">@socialDividerText</span>
                    </div>
                </div>
            }

            <!-- Login Form -->
            <form class="space-y-5" x-data="loginForm()" x-on:submit.prevent="submit">
                <!-- Error Message -->
                <div x-show="error" x-cloak class="p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 text-red-700 dark:text-red-400 text-sm">
                    <span x-text="error"></span>
                </div>

                <!-- Email -->
                <div class="relative">
                    <input type="email" x-model="email" id="email" required
                           class="peer w-full px-4 pt-6 pb-2 border border-gray-300 dark:border-gray-700 bg-transparent text-fashion-black dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition placeholder-transparent"
                           placeholder="Email">
                    <label for="email" class="absolute left-4 top-2 text-xs text-gray-500 dark:text-gray-400 transition-all peer-placeholder-shown:top-4 peer-placeholder-shown:text-base peer-focus:top-2 peer-focus:text-xs peer-focus:text-primary-600">
                        @emailLabel
                    </label>
                </div>

                <!-- Password -->
                <div class="relative">
                    <input :type="showPassword ? 'text' : 'password'" x-model="password" id="password" required
                           class="peer w-full px-4 pt-6 pb-2 pr-12 border border-gray-300 dark:border-gray-700 bg-transparent text-fashion-black dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition placeholder-transparent"
                           placeholder="Password">
                    <label for="password" class="absolute left-4 top-2 text-xs text-gray-500 dark:text-gray-400 transition-all peer-placeholder-shown:top-4 peer-placeholder-shown:text-base peer-focus:top-2 peer-focus:text-xs peer-focus:text-primary-600">
                        @passwordLabel
                    </label>
                    <button type="button" x-on:click="showPassword = !showPassword" class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                        <svg x-show="!showPassword" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                        <svg x-show="showPassword" x-cloak class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"/>
                        </svg>
                    </button>
                </div>

                <!-- Remember & Forgot -->
                <div class="flex items-center justify-between">
                    <label class="flex items-center gap-2 cursor-pointer group">
                        <input type="checkbox" x-model="rememberMe" class="w-4 h-4 rounded border-gray-300 text-fashion-black focus:ring-fashion-black">
                        <span class="text-sm text-gray-600 dark:text-gray-400 group-hover:text-fashion-black dark:group-hover:text-white transition">@rememberMeLabel</span>
                    </label>
                    <a href="@forgotPasswordUrl" class="text-sm text-primary-600 dark:text-primary-400 hover:underline font-medium">@forgotPasswordText</a>
                </div>

                <!-- Submit -->
                <button type="submit" :disabled="loading" class="w-full bg-fashion-black dark:bg-white text-white dark:text-fashion-black py-4 text-sm uppercase tracking-widest font-medium hover:bg-primary-600 dark:hover:bg-primary-400 hover:text-white transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
                    <span x-show="!loading">@submitButtonText</span>
                    <span x-show="loading" x-cloak class="flex items-center justify-center gap-2">
                        <svg class="animate-spin h-4 w-4" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                        @loadingText
                    </span>
                </button>
            </form>

            <script>
                function loginForm() {
                    return {
                        email: '',
                        password: '',
                        rememberMe: false,
                        showPassword: false,
                        loading: false,
                        error: null,
                        returnUrl: '@Html.Raw(returnUrl)',

                        async submit() {
                            this.loading = true;
                            this.error = null;

                            try {
                                const response = await fetch('/api/ecommerce/auth/login', {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json'
                                    },
                                    body: JSON.stringify({
                                        email: this.email,
                                        password: this.password,
                                        rememberMe: this.rememberMe
                                    })
                                });

                                const data = await response.json();

                                if (data.success) {
                                    window.location.href = this.returnUrl || '/account';
                                } else {
                                    this.error = data.message || 'Login failed. Please try again.';
                                }
                            } catch (err) {
                                this.error = 'An error occurred. Please try again.';
                                console.error('Login error:', err);
                            } finally {
                                this.loading = false;
                            }
                        }
                    };
                }
            </script>

            <!-- Register Link -->
            <div class="mt-8 text-center">
                <p class="text-gray-600 dark:text-gray-400">
                    @registerPrompt
                    <a href="/register" class="text-fashion-black dark:text-white font-medium hover:text-primary-600 dark:hover:text-primary-400 transition underline decoration-2 decoration-primary-400 underline-offset-4">@registerLinkText</a>
                </p>
            </div>

            @if (guestCheckoutEnabled)
            {
                <!-- Guest Checkout -->
                <div class="mt-6 pt-6 border-t border-gray-200 dark:border-gray-700">
                    <a href="/checkout" class="flex items-center justify-center gap-2 text-sm text-gray-500 dark:text-gray-400 hover:text-fashion-black dark:hover:text-white transition group">
                        <span>@guestCheckoutText</span>
                        <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                        </svg>
                    </a>
                </div>
            }

            <!-- Trust Badges -->
            <div class="mt-8 flex items-center justify-center gap-6 text-gray-400">
                <div class="flex items-center gap-1.5">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-xs">Secure</span>
                </div>
                <div class="flex items-center gap-1.5">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                    </svg>
                    <span class="text-xs">Encrypted</span>
                </div>
                <div class="flex items-center gap-1.5">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                    </svg>
                    <span class="text-xs">Protected</span>
                </div>
            </div>
        </div>
    </div>
</div>
