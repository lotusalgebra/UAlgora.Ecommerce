@if (featuresEnabled && features.Any())
{
    <!-- Features Section - CMS Driven -->
    <section class="py-16 bg-gray-50 dark:bg-gray-900">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid md:grid-cols-4 gap-6">
                @{
                    var featureColors = new[] { "blue", "green", "amber", "rose" };
                    var featureIndex = 0;
                }
                @foreach (var feature in features)
                {
                    var featureTitle = feature.Value<string>("title") ?? "";
                    var featureDesc = feature.Value<string>("description") ?? "";
                    var featureIcon = feature.Value<string>("icon") ?? "star";
                    var featureColor = featureColors[featureIndex % featureColors.Length];
                    featureIndex++;

                    <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 text-center shadow-sm hover:shadow-lg transition group">
                        <div class="w-16 h-16 bg-@(featureColor)-100 dark:bg-@(featureColor)-900 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition">
                            @await Html.PartialAsync("_FeatureIcon", featureIcon)
                        </div>
                        <h3 class="font-bold text-gray-900 dark:text-white mb-2">@featureTitle</h3>
                        <p class="text-gray-600 dark:text-gray-400 text-sm">@featureDesc</p>
                    </div>
                }
            </div>
        </div>
    </section>
}

@if (testimonialsEnabled && testimonials.Any())
{
    <!-- Testimonials - CMS Driven -->
    <section class="py-16 bg-white dark:bg-gray-800">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">@testimonialsTitle</h2>
                <p class="text-gray-600 dark:text-gray-400">@testimonialsSubtitle</p>
            </div>
            <div class="grid md:grid-cols-3 gap-8">
