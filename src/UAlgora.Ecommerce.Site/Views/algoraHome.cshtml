@section Scripts {
<script>
function heroCarousel(totalSlides, interval, autoplay) {
    return {
        currentSlide: 0,
        totalSlides: totalSlides || 1,
        autoplayInterval: null,
        interval: interval || 5000,
        autoplay: autoplay === 'true' || autoplay === true,

        init() {
            if (this.autoplay && this.totalSlides > 1) {
                this.startAutoplay();
            }
        },

        startAutoplay() {
            this.autoplayInterval = setInterval(() => {
                this.nextSlide();
            }, this.interval);
        },

        stopAutoplay() {
            if (this.autoplayInterval) {
                clearInterval(this.autoplayInterval);
            }
        },

        nextSlide() {
            this.currentSlide = (this.currentSlide + 1) % this.totalSlides;
        },

        prevSlide() {
            this.currentSlide = (this.currentSlide - 1 + this.totalSlides) % this.totalSlides;
        },

        goToSlide(index) {
            this.currentSlide = index;
            this.stopAutoplay();
            if (this.autoplay) {
                this.startAutoplay();
            }
        }
    };
}

function dealCountdown(endDateStr) {
    return {
        days: '00',
        hours: '00',
        minutes: '00',
        seconds: '00',

        init() {
            const endTime = new Date(endDateStr);
            this.updateCountdown(endTime);
            setInterval(() => this.updateCountdown(endTime), 1000);
        },

        updateCountdown(endTime) {
            const now = new Date().getTime();
            const distance = endTime.getTime() - now;

            if (distance > 0) {
                this.days = String(Math.floor(distance / (1000 * 60 * 60 * 24))).padStart(2, '0');
                this.hours = String(Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60))).padStart(2, '0');
                this.minutes = String(Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60))).padStart(2, '0');
                this.seconds = String(Math.floor((distance % (1000 * 60)) / 1000)).padStart(2, '0');
            }
        }
    };
}
</script>
