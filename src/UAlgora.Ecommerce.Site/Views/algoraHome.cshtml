@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.Models.PublishedContent
@using UAlgora.Ecommerce.Core.Interfaces.Services
@using UAlgora.Ecommerce.Core.Interfaces.Repositories
@using UAlgora.Ecommerce.Core.Constants
@inject IProductService ProductService
@inject Umbraco.Cms.Core.Services.IContentService ContentService
@inject Umbraco.Cms.Core.Services.IContentTypeService ContentTypeService
@{
    Layout = "_Layout";

    // Get settings from the page
    var heroEnabled = Model.Value<bool>("heroEnabled");
    var heroAutoplay = Model.Value<bool>("heroAutoplay");
    var heroInterval = Model.Value<int>("heroInterval");
    if (heroInterval <= 0) heroInterval = 5000;

    var categoriesEnabled = Model.Value<bool>("categoriesEnabled");
    var categoriesTitle = Model.Value<string>("categoriesTitle") ?? "Shop by Category";
    var categoriesSubtitle = Model.Value<string>("categoriesSubtitle") ?? "Browse our popular categories";
    var categoriesCount = Model.Value<int>("categoriesCount");
    if (categoriesCount <= 0) categoriesCount = 8;

    var dealsEnabled = Model.Value<bool>("dealsEnabled");
    var dealsTitle = Model.Value<string>("dealsTitle") ?? "Deal of the Day";
    var dealEndDate = Model.Value<DateTime?>("dealEndDate") ?? DateTime.Now.AddDays(3);
    var dealProductsCount = Model.Value<int>("dealProductsCount");
    if (dealProductsCount <= 0) dealProductsCount = 4;

    var featuredEnabled = Model.Value<bool>("featuredEnabled");
    var featuredTitle = Model.Value<string>("featuredTitle") ?? "Featured Products";
    var featuredCount = Model.Value<int>("featuredCount");
    if (featuredCount <= 0) featuredCount = 8;

    var newArrivalsEnabled = Model.Value<bool>("newArrivalsEnabled");
    var newArrivalsTitle = Model.Value<string>("newArrivalsTitle") ?? "New Arrivals";
    var newArrivalsCount = Model.Value<int>("newArrivalsCount");
    if (newArrivalsCount <= 0) newArrivalsCount = 8;

    var bannersEnabled = Model.Value<bool>("bannersEnabled");
    var featuresEnabled = Model.Value<bool>("featuresEnabled");
    var testimonialsEnabled = Model.Value<bool>("testimonialsEnabled");
    var testimonialsTitle = Model.Value<string>("testimonialsTitle") ?? "What Our Customers Say";
    var testimonialsSubtitle = Model.Value<string>("testimonialsSubtitle") ?? "Trusted by thousands of happy customers";

    // Get child content
    var heroSlides = Model.Children()?.Where(x => x.ContentType.Alias == "algoraHeroSlide").ToList() ?? new List<IPublishedContent>();
    var banners = Model.Children()?.Where(x => x.ContentType.Alias == "algoraBanner").OrderBy(x => x.Value<int>("sortOrder")).ToList() ?? new List<IPublishedContent>();
    var testimonials = Model.Children()?.Where(x => x.ContentType.Alias == "algoraTestimonial").OrderBy(x => x.Value<int>("sortOrder")).ToList() ?? new List<IPublishedContent>();
    var features = Model.Children()?.Where(x => x.ContentType.Alias == "algoraFeature").OrderBy(x => x.Value<int>("sortOrder")).ToList() ?? new List<IPublishedContent>();

    // Get categories from Algora Catalog
    var catalog = Umbraco.ContentAtRoot().FirstOrDefault(x => x.ContentType.Alias == "algoraCatalog");
    var categories = catalog?.Children()?.Where(x => x.ContentType.Alias == "algoraCategory").Take(categoriesCount).ToList() ?? new List<IPublishedContent>();

    // Get products from database
    var featuredProducts = await ProductService.GetPagedAsync(new ProductQueryParameters { Page = 1, PageSize = featuredCount, IsFeatured = true });
    var newProducts = await ProductService.GetPagedAsync(new ProductQueryParameters { Page = 1, PageSize = newArrivalsCount, SortBy = ProductSortBy.Newest });
    var dealProducts = await ProductService.GetPagedAsync(new ProductQueryParameters { Page = 1, PageSize = dealProductsCount, OnSale = true });

    // SEO
    var metaTitle = Model.Value<string>("metaTitle") ?? Model.Name;
    var metaDescription = Model.Value<string>("metaDescription") ?? "";
    ViewData["Title"] = metaTitle;
    ViewData["MetaDescription"] = metaDescription;
}

@if (heroEnabled && heroSlides.Any())
{
    <!-- Hero Carousel - CMS Driven -->
    <section class="relative" x-data="heroCarousel(@heroSlides.Count, @heroInterval, @(heroAutoplay ? "true" : "false"))">
        <div class="overflow-hidden">
            <div class="flex transition-transform duration-700 ease-out" :style="{ transform: `translateX(-${currentSlide * 100}%)` }">
                @foreach (var slide in heroSlides)
                {
                    var title = slide.Value<string>("title") ?? "";
                    var subtitle = slide.Value<string>("subtitle") ?? "";
                    var description = slide.Value<string>("description") ?? "";
                    var bgColor = slide.Value<string>("backgroundColor") ?? "from-blue-600 via-blue-500 to-indigo-500";
                    var textColor = slide.Value<string>("textColor") ?? "white";
                    var buttonText = slide.Value<string>("buttonText") ?? "Shop Now";
                    var buttonLink = slide.Value<string>("buttonLink") ?? "/products";
                    var secondaryButtonText = slide.Value<string>("secondaryButtonText");
                    var secondaryButtonLink = slide.Value<string>("secondaryButtonLink");
                    var bgImage = slide.Value<IPublishedContent>("backgroundImage");
                    var textAlign = slide.Value<string>("textAlignment") ?? "left";

                    <div class="w-full flex-shrink-0 relative bg-gradient-to-r @bgColor">
                        @if (bgImage != null)
                        {
                            <div class="absolute inset-0">
                                <img src="@bgImage.Url()" alt="@title" class="w-full h-full object-cover" />
                                <div class="absolute inset-0 bg-black/40"></div>
                            </div>
                        }
                        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-24 relative z-10">
                            <div class="grid lg:grid-cols-2 gap-8 items-center">
                                <div class="text-@textColor @(textAlign == "center" ? "text-center lg:col-span-2" : "")">
                                    @if (!string.IsNullOrEmpty(subtitle))
                                    {
                                        <span class="inline-block bg-white/20 backdrop-blur px-4 py-1.5 rounded-full text-sm font-medium mb-4">
                                            @subtitle
                                        </span>
                                    }
                                    <h1 class="text-4xl lg:text-6xl font-bold leading-tight mb-6">
                                        @Html.Raw(title.Replace("\n", "<br>"))
                                    </h1>
                                    @if (!string.IsNullOrEmpty(description))
                                    {
                                        <p class="text-lg opacity-90 mb-8 max-w-lg @(textAlign == "center" ? "mx-auto" : "")">
                                            @description
                                        </p>
                                    }
                                    <div class="flex flex-wrap gap-4 @(textAlign == "center" ? "justify-center" : "")">
                                        @if (!string.IsNullOrEmpty(buttonText))
                                        {
                                            <a href="@buttonLink" class="bg-white text-gray-900 px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition shadow-lg inline-flex items-center gap-2">
                                                @buttonText
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                                                </svg>
                                            </a>
                                        }
                                        @if (!string.IsNullOrEmpty(secondaryButtonText))
                                        {
                                            <a href="@secondaryButtonLink" class="bg-transparent border-2 border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-gray-900 transition">
                                                @secondaryButtonText
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        @if (heroSlides.Count > 1)
        {
            <!-- Carousel Controls -->
            <button @@click="prevSlide()" class="absolute left-4 top-1/2 -translate-y-1/2 w-12 h-12 bg-white/20 backdrop-blur hover:bg-white/40 rounded-full flex items-center justify-center text-white transition z-10">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
            </button>
            <button @@click="nextSlide()" class="absolute right-4 top-1/2 -translate-y-1/2 w-12 h-12 bg-white/20 backdrop-blur hover:bg-white/40 rounded-full flex items-center justify-center text-white transition z-10">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </button>

            <!-- Carousel Indicators -->
            <div class="absolute bottom-6 left-1/2 -translate-x-1/2 flex gap-2 z-10">
                <template x-for="(slide, index) in totalSlides" :key="index">
                    <button @@click="goToSlide(index)"
                            :class="currentSlide === index ? 'bg-white w-8' : 'bg-white/50 w-3 hover:bg-white/75'"
                            class="h-3 rounded-full transition-all duration-300"></button>
                </template>
            </div>
        }
    </section>
}

@if (categoriesEnabled && categories.Any())
{
    <!-- Categories Section - CMS Driven -->
    <section class="py-12 bg-white dark:bg-gray-800">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            @if (!string.IsNullOrEmpty(categoriesTitle))
            {
                <div class="text-center mb-10">
                    <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">@categoriesTitle</h2>
                    @if (!string.IsNullOrEmpty(categoriesSubtitle))
                    {
                        <p class="text-gray-600 dark:text-gray-400">@categoriesSubtitle</p>
                    }
                </div>
            }
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 lg:gap-6">
                @{
                    var categoryColors = new[] { "blue", "pink", "emerald", "orange", "purple", "cyan", "rose", "amber" };
                    var index = 0;
                }
                @foreach (var category in categories)
                {
                    var catName = category.Value<string>("categoryName") ?? category.Name;
                    var catImage = category.Value<IPublishedContent>("categoryImage");
                    var catIcon = category.Value<string>("icon") ?? "grid";
                    var productCount = category.Children()?.Count(c => c.ContentType.Alias == "algoraProduct") ?? 0;
                    var color = categoryColors[index % categoryColors.Length];
                    index++;

                    <a href="@category.Url()" class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-@(color)-500 to-@(color)-600 p-6 text-white hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                        @if (catImage != null)
                        {
                            <div class="absolute inset-0">
                                <img src="@catImage.Url()" alt="@catName" class="w-full h-full object-cover opacity-30 group-hover:scale-110 transition duration-500" />
                            </div>
                        }
                        <div class="relative z-10">
                            <div class="w-14 h-14 bg-white/20 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition">
                                <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
                                </svg>
                            </div>
                            <h3 class="font-bold text-lg mb-1">@catName</h3>
                            <p class="text-white/80 text-sm">@productCount+ Products</p>
                        </div>
                        <div class="absolute -right-4 -bottom-4 w-24 h-24 bg-white/10 rounded-full"></div>
                    </a>
                }
            </div>
        </div>
    </section>
}

@if (dealsEnabled)
{
    <!-- Deal of the Day - CMS Driven -->
    <section class="py-16 bg-gray-50 dark:bg-gray-900" x-data="dealCountdown('@dealEndDate.ToString("o")')">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="bg-gradient-to-r from-red-600 via-rose-600 to-pink-600 rounded-3xl overflow-hidden shadow-2xl">
                <div class="grid lg:grid-cols-2 gap-8 p-8 lg:p-12">
                    <div class="text-white">
                        <div class="flex items-center gap-2 mb-4">
                            <svg class="w-8 h-8 text-yellow-300 animate-pulse" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12.586 2.586a2 2 0 00-2.828 0L3.172 9.172a2 2 0 000 2.828l6.586 6.586a2 2 0 002.828 0l6.586-6.586a2 2 0 000-2.828l-6.586-6.586z"/>
                            </svg>
                            <span class="text-xl font-bold">@dealsTitle</span>
                        </div>
                        <h2 class="text-3xl lg:text-5xl font-bold mb-4">
                            Super Sale<br>
                            <span class="text-yellow-300">Up to 70% Off!</span>
                        </h2>
                        <p class="text-rose-100 text-lg mb-8">
                            Don't miss out on our biggest sale. Limited time offer on selected products.
                        </p>

                        <!-- Countdown Timer -->
                        <div class="mb-8">
                            <p class="text-sm text-rose-200 mb-3">Hurry! Offer ends in:</p>
                            <div class="flex gap-3">
                                <div class="bg-white/20 backdrop-blur rounded-xl p-4 text-center min-w-[70px]">
                                    <span class="block text-3xl font-bold" x-text="days">00</span>
                                    <span class="text-xs text-rose-200">Days</span>
                                </div>
                                <div class="bg-white/20 backdrop-blur rounded-xl p-4 text-center min-w-[70px]">
                                    <span class="block text-3xl font-bold" x-text="hours">00</span>
                                    <span class="text-xs text-rose-200">Hours</span>
                                </div>
                                <div class="bg-white/20 backdrop-blur rounded-xl p-4 text-center min-w-[70px]">
                                    <span class="block text-3xl font-bold" x-text="minutes">00</span>
                                    <span class="text-xs text-rose-200">Mins</span>
                                </div>
                                <div class="bg-white/20 backdrop-blur rounded-xl p-4 text-center min-w-[70px]">
                                    <span class="block text-3xl font-bold" x-text="seconds">00</span>
                                    <span class="text-xs text-rose-200">Secs</span>
                                </div>
                            </div>
                        </div>

                        <a href="/deals" class="inline-flex items-center gap-2 bg-white text-rose-600 px-8 py-4 rounded-xl font-bold hover:bg-gray-100 transition shadow-lg">
                            Shop All Deals
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                            </svg>
                        </a>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        @foreach (var product in dealProducts.Items.Take(4))
                        {
                            <div class="bg-white dark:bg-gray-800 rounded-xl p-4 shadow-lg hover:shadow-xl transition group">
                                <div class="relative aspect-square bg-gray-100 dark:bg-gray-700 rounded-lg mb-3 overflow-hidden">
                                    @if (product.SalePrice.HasValue)
                                    {
                                        var discount = (int)Math.Round((1 - (product.SalePrice.Value / product.BasePrice)) * 100);
                                        <span class="absolute top-2 left-2 bg-red-500 text-white text-xs font-bold px-2 py-1 rounded-lg z-10">
                                            -@discount%
                                        </span>
                                    }
                                    @if (!string.IsNullOrEmpty(product.PrimaryImageUrl))
                                    {
                                        <img src="@product.PrimaryImageUrl" alt="@product.Name" class="w-full h-full object-cover group-hover:scale-110 transition duration-500">
                                    }
                                    else
                                    {
                                        <div class="w-full h-full flex items-center justify-center">
                                            <svg class="w-12 h-12 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                            </svg>
                                        </div>
                                    }
                                </div>
                                <h4 class="font-semibold text-gray-900 dark:text-white text-sm line-clamp-2 mb-2">@product.Name</h4>
                                <div class="flex items-center gap-2">
                                    <span class="text-lg font-bold text-rose-600">$@((product.SalePrice ?? product.BasePrice).ToString("F2"))</span>
                                    @if (product.SalePrice.HasValue)
                                    {
                                        <span class="text-sm text-gray-400 line-through">$@product.BasePrice.ToString("F2")</span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
}

