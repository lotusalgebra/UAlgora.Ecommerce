@model ProductDetailViewModel

<div class="bg-white border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <nav class="flex text-sm text-gray-500">
            <a href="/" class="hover:text-primary-600">Home</a>
            <span class="mx-2">/</span>
            <a href="/products" class="hover:text-primary-600">Products</a>
            @if (Model.Category != null)
            {
                <span class="mx-2">/</span>
                <a href="/products?category=@Model.Category.Id" class="hover:text-primary-600">@Model.Category.Name</a>
            }
            <span class="mx-2">/</span>
            <span class="text-gray-900">@Model.Product.Name</span>
        </nav>
    </div>
</div>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Product Details -->
    <div class="grid lg:grid-cols-2 gap-12 mb-16" x-data="{ selectedImage: '@(Model.Product.PrimaryImageUrl ?? "")', quantity: 1 }">
        <!-- Images -->
        <div>
            <div class="aspect-square bg-gray-100 rounded-2xl overflow-hidden mb-4">
                @if (!string.IsNullOrEmpty(Model.Product.PrimaryImageUrl))
                {
                    <img :src="selectedImage || '@Model.Product.PrimaryImageUrl'" alt="@Model.Product.Name" class="w-full h-full object-cover">
                }
                else
                {
                    <div class="w-full h-full flex items-center justify-center">
                        <svg class="w-32 h-32 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                    </div>
                }
            </div>
            <!-- Thumbnail Gallery -->
            @if (Model.Product.ImageIds.Any())
            {
                <div class="grid grid-cols-5 gap-3">
                    @for (int i = 0; i < Math.Min(5, Model.Product.ImageIds.Count + 1); i++)
                    {
                        <button class="aspect-square bg-gray-100 rounded-lg overflow-hidden border-2 hover:border-primary-500 transition"
                                :class="{ 'border-primary-500': selectedImage === 'image@(i)' }">
                            <div class="w-full h-full bg-gradient-to-br from-gray-100 to-gray-200"></div>
                        </button>
                    }
                </div>
            }
        </div>

        <!-- Product Info -->
        <div>
            <!-- Badges -->
            <div class="flex gap-2 mb-4">
                @if (Model.Product.IsOnSale)
                {
                    <span class="bg-red-100 text-red-800 text-sm font-medium px-3 py-1 rounded-full">
                        @Model.Product.DiscountPercentage?.ToString("F0")% OFF
                    </span>
                }
                @if (Model.Product.IsFeatured)
                {
                    <span class="bg-primary-100 text-primary-800 text-sm font-medium px-3 py-1 rounded-full">Featured</span>
                }
                @if (Model.Product.IsInStock)
                {
                    <span class="bg-green-100 text-green-800 text-sm font-medium px-3 py-1 rounded-full">In Stock</span>
                }
                else
                {
                    <span class="bg-gray-100 text-gray-800 text-sm font-medium px-3 py-1 rounded-full">Out of Stock</span>
                }
            </div>

            <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">@Model.Product.Name</h1>

            <!-- Rating -->
            <div class="flex items-center gap-2 mb-6">
                <div class="flex">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <svg class="w-5 h-5 @(i <= Math.Round(Model.AverageRating) ? "text-yellow-400" : "text-gray-300")" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                        </svg>
                    }
                </div>
                <span class="text-gray-600">@Model.AverageRating.ToString("F1") (@Model.ReviewCount reviews)</span>
            </div>

            <!-- Price -->
            <div class="flex items-baseline gap-4 mb-6">
                <span class="text-4xl font-bold text-gray-900">$@Model.Product.CurrentPrice.ToString("F2")</span>
                @if (Model.Product.SalePrice.HasValue)
                {
                    <span class="text-xl text-gray-500 line-through">$@Model.Product.BasePrice.ToString("F2")</span>
                    <span class="text-lg text-red-600 font-medium">Save $@((Model.Product.BasePrice - Model.Product.CurrentPrice).ToString("F2"))</span>
                }
            </div>

            <!-- Short Description -->
            @if (!string.IsNullOrEmpty(Model.Product.ShortDescription))
            {
                <p class="text-gray-600 mb-6">@Model.Product.ShortDescription</p>
            }

            <!-- SKU -->
            <p class="text-sm text-gray-500 mb-6">SKU: @Model.Product.Sku</p>

            <!-- Quantity & Add to Cart -->
            @if (Model.Product.IsInStock)
            {
                <div class="flex flex-col sm:flex-row gap-4 mb-8">
                    <div class="flex items-center border rounded-lg">
                        <button @@click="quantity = Math.max(1, quantity - 1)" class="px-4 py-3 hover:bg-gray-100 transition">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
                            </svg>
                        </button>
                        <input type="number" x-model="quantity" min="1" class="w-16 text-center border-0 focus:ring-0">
                        <button @@click="quantity++" class="px-4 py-3 hover:bg-gray-100 transition">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                            </svg>
                        </button>
                    </div>
                    <button @@click="CartManager.addItem({id: '@Model.Product.Id', name: '@Model.Product.Name.Replace("'", "\\'")', price: @Model.Product.CurrentPrice, image: '@Model.Product.PrimaryImageUrl', quantity: quantity})"
                            class="flex-1 bg-primary-600 text-white py-3 px-8 rounded-lg font-semibold hover:bg-primary-700 transition flex items-center justify-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
                        </svg>
                        Add to Cart
                    </button>
                    <button class="p-3 border rounded-lg hover:bg-gray-50 transition" title="Add to Wishlist">
                        <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                        </svg>
                    </button>
                </div>
            }
            else
            {
                <div class="mb-8">
                    <button disabled class="w-full bg-gray-300 text-gray-500 py-3 px-8 rounded-lg font-semibold cursor-not-allowed">
                        Out of Stock
                    </button>
                    <p class="text-sm text-gray-500 mt-2">Notify me when available</p>
                </div>
            }

            <!-- Features -->
            <div class="grid grid-cols-2 gap-4 mb-8">
                <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
                    </svg>
                    <span class="text-sm">Free shipping over $50</span>
                </div>
                <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                    </svg>
                    <span class="text-sm">30-day returns</span>
                </div>
                <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                    </svg>
                    <span class="text-sm">Secure checkout</span>
                </div>
                <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/>
                    </svg>
                    <span class="text-sm">24/7 support</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Description & Reviews Tabs -->
    <div class="mb-16" x-data="{ tab: 'description' }">
        <div class="border-b">
            <nav class="flex gap-8">
                <button @@click="tab = 'description'"
                        :class="tab === 'description' ? 'border-primary-600 text-primary-600' : 'border-transparent text-gray-500 hover:text-gray-700'"
                        class="py-4 border-b-2 font-medium transition">
                    Description
                </button>
                <button @@click="tab = 'specifications'"
                        :class="tab === 'specifications' ? 'border-primary-600 text-primary-600' : 'border-transparent text-gray-500 hover:text-gray-700'"
                        class="py-4 border-b-2 font-medium transition">
                    Specifications
                </button>
                <button @@click="tab = 'reviews'"
                        :class="tab === 'reviews' ? 'border-primary-600 text-primary-600' : 'border-transparent text-gray-500 hover:text-gray-700'"
                        class="py-4 border-b-2 font-medium transition">
                    Reviews (@Model.ReviewCount)
                </button>
            </nav>
        </div>

        <div class="py-8">
            <!-- Description Tab -->
            <div x-show="tab === 'description'">
                <div class="prose max-w-none">
                    @if (!string.IsNullOrEmpty(Model.Product.Description))
                    {
                        @Html.Raw(Model.Product.Description)
                    }
                    else
                    {
                        <p>No description available for this product.</p>
                    }
                </div>
            </div>

            <!-- Specifications Tab -->
            <div x-show="tab === 'specifications'" x-cloak>
                <table class="w-full">
                    <tbody class="divide-y">
                        <tr>
                            <td class="py-3 text-gray-500 w-1/3">SKU</td>
                            <td class="py-3 text-gray-900">@Model.Product.Sku</td>
                        </tr>
                        @if (!string.IsNullOrEmpty(Model.Product.Brand))
                        {
                            <tr>
                                <td class="py-3 text-gray-500">Brand</td>
                                <td class="py-3 text-gray-900">@Model.Product.Brand</td>
                            </tr>
                        }
                        @if (Model.Product.Weight.HasValue)
                        {
                            <tr>
                                <td class="py-3 text-gray-500">Weight</td>
                                <td class="py-3 text-gray-900">@Model.Product.Weight @Model.Product.WeightUnit</td>
                            </tr>
                        }
                        @if (Model.Product.Length.HasValue && Model.Product.Width.HasValue && Model.Product.Height.HasValue)
                        {
                            <tr>
                                <td class="py-3 text-gray-500">Dimensions</td>
                                <td class="py-3 text-gray-900">@Model.Product.Length x @Model.Product.Width x @Model.Product.Height @Model.Product.DimensionUnit</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Reviews Tab -->
            <div x-show="tab === 'reviews'" x-cloak>
                @if (Model.Reviews.Any())
                {
                    <div class="space-y-6">
                        @foreach (var review in Model.Reviews.Take(5))
                        {
                            <div class="border-b pb-6">
                                <div class="flex items-center gap-4 mb-3">
                                    <div class="w-10 h-10 bg-primary-100 rounded-full flex items-center justify-center">
                                        <span class="text-primary-600 font-semibold">@(review.ReviewerName?.Substring(0, 1).ToUpper() ?? "A")</span>
                                    </div>
                                    <div>
                                        <p class="font-medium">@(review.ReviewerName ?? "Anonymous")</p>
                                        <div class="flex items-center gap-2">
                                            <div class="flex">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    <svg class="w-4 h-4 @(i <= review.Rating ? "text-yellow-400" : "text-gray-300")" fill="currentColor" viewBox="0 0 20 20">
                                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                                    </svg>
                                                }
                                            </div>
                                            <span class="text-sm text-gray-500">@review.CreatedAt.ToString("MMM dd, yyyy")</span>
                                        </div>
                                    </div>
                                </div>
                                @if (!string.IsNullOrEmpty(review.Title))
                                {
                                    <h4 class="font-semibold mb-2">@review.Title</h4>
                                }
                                <p class="text-gray-600">@review.Content</p>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-12">
                        <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                        </svg>
                        <p class="text-gray-500">No reviews yet. Be the first to review this product!</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Related Products -->
    @if (Model.RelatedProducts.Any())
    {
        <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Related Products</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                @foreach (var product in Model.RelatedProducts)
                {
                    <partial name="_ProductCard" model="product" />
                }
            </div>
        </section>
    }
</div>
