@model WishlistViewModel

<div class="min-h-screen bg-gray-50 dark:bg-fashion-charcoal" x-data="wishlistPage()">
    <!-- Hero Header -->
    <div class="bg-gradient-to-br from-accent-500 via-primary-600 to-primary-500 dark:from-accent-700 dark:via-primary-800 dark:to-primary-700 relative overflow-hidden">
        <div class="absolute inset-0 opacity-20">
            <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\"40\" height=\"40\" viewBox=\"0 0 40 40\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cpath d=\"M20 20.5V18H0v-2h20v-2.5L25 17l-5 3.5z\" fill=\"%23fff\" fill-opacity=\"0.2\"/%3E%3C/svg%3E');"></div>
        </div>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10 relative">
            <nav class="flex text-sm text-white/60 mb-4">
                <a href="/" class="hover:text-white transition">Home</a>
                <span class="mx-2">/</span>
                <span class="text-white">My Wishlist</span>
            </nav>
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                <div>
                    <h1 class="font-display text-3xl lg:text-4xl font-bold text-white flex items-center gap-3">
                        <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                        </svg>
                        My Wishlist<span class="text-accent-200">.</span>
                    </h1>
                    <p class="text-white/70 mt-2" x-text="items.length + ' items saved'"></p>
                </div>
                <div class="flex items-center gap-3">
                    <button class="flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur-sm text-white text-sm font-medium hover:bg-white/20 transition">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
                        </svg>
                        Share List
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Empty State -->
        <template x-if="items.length === 0">
            <div class="bg-white dark:bg-fashion-black border border-gray-200 dark:border-gray-800 py-20 text-center">
                <div class="w-24 h-24 mx-auto mb-8 bg-accent-50 dark:bg-accent-900/20 rounded-full flex items-center justify-center">
                    <svg class="w-12 h-12 text-accent-300 dark:text-accent-700" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                    </svg>
                </div>
                <h2 class="font-display text-2xl font-bold text-fashion-black dark:text-white mb-3">Your wishlist is empty</h2>
                <p class="text-gray-500 dark:text-gray-400 mb-8 max-w-md mx-auto">Start adding products you love by clicking the heart icon on any product.</p>
                <a href="/products" class="inline-flex items-center gap-2 bg-fashion-black dark:bg-white text-white dark:text-fashion-black px-8 py-4 text-sm uppercase tracking-widest font-medium hover:bg-primary-600 dark:hover:bg-primary-400 hover:text-white transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                    </svg>
                    Explore Products
                </a>
            </div>
        </template>

        <!-- Wishlist Items -->
        <template x-if="items.length > 0">
            <div>
                <!-- Grid View -->
                <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 lg:gap-6">
                    <template x-for="item in items" :key="item.id">
                        <div class="group bg-white dark:bg-fashion-black border border-gray-200 dark:border-gray-800 relative">
                            <!-- Remove Button -->
                            <button @@click="removeItem(item.id)"
                                    class="absolute top-3 right-3 z-10 w-8 h-8 bg-white dark:bg-fashion-charcoal rounded-full shadow-lg flex items-center justify-center text-gray-400 hover:text-accent-500 hover:bg-accent-50 dark:hover:bg-accent-900/20 transition">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                </svg>
                            </button>

                            <!-- Image -->
                            <a :href="'/products/' + item.slug" class="block">
                                <div class="aspect-[4/5] bg-gray-100 dark:bg-fashion-charcoal overflow-hidden">
                                    <img :src="item.image || 'https://placehold.co/320x400/e2e8f0/64748b?text=Product'"
                                         :alt="item.name"
                                         class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500">
                                </div>
                            </a>

                            <!-- Stock Badge -->
                            <div class="absolute top-3 left-3">
                                <span x-show="!item.inStock" class="bg-accent-500 text-white text-xs font-accent tracking-wider px-2.5 py-1">
                                    SOLD OUT
                                </span>
                            </div>

                            <!-- Info -->
                            <div class="p-4">
                                <p class="text-xs text-gray-400 uppercase tracking-wider mb-1" x-text="item.brand || 'Algora'"></p>
                                <a :href="'/products/' + item.slug" class="block">
                                    <h3 class="text-sm font-medium text-fashion-black dark:text-white line-clamp-2 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition" x-text="item.name"></h3>
                                </a>
                                <div class="flex items-baseline gap-2 mt-2">
                                    <span class="font-display text-lg font-bold text-fashion-black dark:text-white" x-text="'$' + item.price.toFixed(2)"></span>
                                    <template x-if="item.originalPrice && item.originalPrice > item.price">
                                        <span class="text-sm text-gray-400 line-through" x-text="'$' + item.originalPrice.toFixed(2)"></span>
                                    </template>
                                </div>
                                <p class="text-xs text-gray-400 mt-2" x-text="'Added ' + item.addedAt"></p>

                                <!-- Add to Bag -->
                                <button x-show="item.inStock" @@click="addToCart(item)"
                                        class="w-full mt-4 bg-fashion-black dark:bg-white text-white dark:text-fashion-black py-3 text-xs uppercase tracking-widest font-medium hover:bg-primary-600 dark:hover:bg-primary-400 hover:text-white transition-colors">
                                    Add to Bag
                                </button>
                                <button x-show="!item.inStock" disabled
                                        class="w-full mt-4 bg-gray-100 dark:bg-gray-800 text-gray-400 dark:text-gray-600 py-3 text-xs uppercase tracking-widest font-medium cursor-not-allowed">
                                    Out of Stock
                                </button>
                            </div>
                        </div>
                    </template>
                </div>

                <!-- Actions -->
                <div class="mt-8 flex flex-col sm:flex-row justify-between items-center gap-4 pt-6 border-t border-gray-200 dark:border-gray-800">
                    <button @@click="clearWishlist()" class="text-sm text-gray-500 dark:text-gray-400 hover:text-accent-600 dark:hover:text-accent-400 font-medium flex items-center gap-2 transition">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                        Clear Wishlist
                    </button>
                    <button @@click="addAllToCart()" class="flex items-center gap-2 bg-fashion-black dark:bg-white text-white dark:text-fashion-black px-8 py-4 text-sm uppercase tracking-widest font-medium hover:bg-primary-600 dark:hover:bg-primary-400 hover:text-white transition-colors">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                        </svg>
                        Add All to Bag
                    </button>
                </div>
            </div>
        </template>
    </div>
</div>

@section Scripts {
<script>
function wishlistPage() {
    return {
        items: JSON.parse(localStorage.getItem('wishlist') || '[]'),

        addToCart(item) {
            CartManager.addItem({
                id: item.id,
                name: item.name,
                price: item.price,
                image: item.image,
                size: 'M'
            });
            this.showNotification('Added to bag!');
        },

        addAllToCart() {
            const inStockItems = this.items.filter(i => i.inStock);
            if (inStockItems.length === 0) {
                this.showNotification('No items in stock to add');
                return;
            }
            inStockItems.forEach(item => {
                CartManager.addItem({
                    id: item.id,
                    name: item.name,
                    price: item.price,
                    image: item.image,
                    size: 'M'
                });
            });
            this.showNotification(`Added ${inStockItems.length} items to bag!`);
        },

        removeItem(id) {
            this.items = this.items.filter(i => i.id !== id);
            localStorage.setItem('wishlist', JSON.stringify(this.items));
            this.showNotification('Item removed from wishlist');
        },

        clearWishlist() {
            if (confirm('Are you sure you want to clear your wishlist?')) {
                this.items = [];
                localStorage.setItem('wishlist', JSON.stringify(this.items));
                this.showNotification('Wishlist cleared');
            }
        },

        showNotification(message) {
            const notification = document.createElement('div');
            notification.className = 'fixed bottom-6 left-1/2 -translate-x-1/2 bg-fashion-black text-white px-6 py-3 shadow-2xl z-50 flex items-center gap-2 text-sm font-medium';
            notification.innerHTML = `
                <svg class="w-5 h-5 text-primary-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                ${message}
            `;
            document.body.appendChild(notification);
            setTimeout(() => {
                notification.style.opacity = '0';
                notification.style.transition = 'opacity 0.3s';
                setTimeout(() => notification.remove(), 300);
            }, 2500);
        }
    };
}
</script>
}
