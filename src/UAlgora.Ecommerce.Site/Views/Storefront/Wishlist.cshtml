@model WishlistViewModel

<div class="bg-white border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <nav class="flex text-sm text-gray-500">
            <a href="/" class="hover:text-primary-600">Home</a>
            <span class="mx-2">/</span>
            <span class="text-gray-900">My Wishlist</span>
        </nav>
    </div>
</div>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8" x-data="wishlistPage()">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900">My Wishlist</h1>
        <div class="flex gap-4">
            <button class="text-gray-600 hover:text-gray-900 flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
                </svg>
                Share
            </button>
        </div>
    </div>

    <template x-if="items.length === 0">
        <div class="text-center py-16">
            <svg class="w-24 h-24 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            </svg>
            <h2 class="text-xl font-semibold text-gray-900 mb-2">Your wishlist is empty</h2>
            <p class="text-gray-600 mb-6">Start adding products you love to your wishlist</p>
            <a href="/products" class="inline-block bg-primary-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-primary-700 transition">
                Explore Products
            </a>
        </div>
    </template>

    <template x-if="items.length > 0">
        <div>
            <div class="bg-white rounded-xl shadow-sm overflow-hidden">
                <div class="hidden md:grid grid-cols-12 gap-4 px-6 py-4 bg-gray-50 border-b text-sm font-medium text-gray-500">
                    <div class="col-span-6">Product</div>
                    <div class="col-span-2 text-center">Price</div>
                    <div class="col-span-2 text-center">Stock</div>
                    <div class="col-span-2 text-right">Actions</div>
                </div>

                <div class="divide-y">
                    <template x-for="item in items" :key="item.id">
                        <div class="grid grid-cols-1 md:grid-cols-12 gap-4 p-6 items-center">
                            <div class="md:col-span-6 flex items-center gap-4">
                                <div class="w-20 h-20 bg-gray-100 rounded-lg overflow-hidden flex-shrink-0">
                                    <img :src="item.image || 'https://placehold.co/80x80/e2e8f0/64748b?text=Product'" :alt="item.name" class="w-full h-full object-cover">
                                </div>
                                <div>
                                    <a :href="'/products/' + item.slug" class="font-medium text-gray-900 hover:text-primary-600" x-text="item.name"></a>
                                    <p class="text-sm text-gray-500" x-text="'Added on ' + item.addedAt"></p>
                                </div>
                            </div>

                            <div class="md:col-span-2 text-center">
                                <span class="font-semibold text-gray-900" x-text="'$' + item.price.toFixed(2)"></span>
                            </div>

                            <div class="md:col-span-2 text-center">
                                <span x-show="item.inStock" class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">In Stock</span>
                                <span x-show="!item.inStock" class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">Out of Stock</span>
                            </div>

                            <div class="md:col-span-2 flex justify-end gap-2">
                                <button x-show="item.inStock" @@click="addToCart(item)"
                                        class="bg-primary-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-primary-700 transition">
                                    Add to Cart
                                </button>
                                <button @@click="removeItem(item.id)" class="p-2 text-gray-400 hover:text-red-500 transition">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </template>
                </div>
            </div>

            <div class="mt-6 flex justify-between items-center">
                <button @@click="clearWishlist()" class="text-gray-500 hover:text-gray-700 font-medium">
                    Clear Wishlist
                </button>
                <button @@click="addAllToCart()" class="bg-primary-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-primary-700 transition">
                    Add All to Cart
                </button>
            </div>
        </div>
    </template>
</div>

@section Scripts {
<script>
function wishlistPage() {
    return {
        items: JSON.parse(localStorage.getItem('wishlist') || '[]'),

        addToCart(item) {
            CartManager.addItem({
                id: item.id,
                name: item.name,
                price: item.price,
                image: item.image
            });
        },

        addAllToCart() {
            this.items.filter(i => i.inStock).forEach(item => this.addToCart(item));
        },

        removeItem(id) {
            this.items = this.items.filter(i => i.id !== id);
            localStorage.setItem('wishlist', JSON.stringify(this.items));
        },

        clearWishlist() {
            if (confirm('Clear all items from wishlist?')) {
                this.items = [];
                localStorage.setItem('wishlist', JSON.stringify(this.items));
            }
        }
    };
}
</script>
}
