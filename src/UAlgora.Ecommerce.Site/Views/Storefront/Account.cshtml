                                <button class="mt-4 text-sm text-primary-600 dark:text-primary-400 hover:underline font-medium">
                                    Add Address
                                </button>
                            </div>
                        }
                        <div class="border border-dashed border-gray-300 dark:border-gray-700 p-4 flex flex-col items-center justify-center text-center min-h-[140px]">
                            <svg class="w-8 h-8 text-gray-300 dark:text-gray-600 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4v16m8-8H4"/>
                            </svg>
                            <p class="text-sm text-gray-400 dark:text-gray-500">Add another address</p>
                        </div>
                    </div>
                </div>
            </main>
        </div>
