@model Order

<div class="bg-white border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <nav class="flex text-sm text-gray-500">
            <a href="/" class="hover:text-primary-600">Home</a>
            <span class="mx-2">/</span>
            <a href="/account" class="hover:text-primary-600">Account</a>
            <span class="mx-2">/</span>
            <a href="/account/orders" class="hover:text-primary-600">Orders</a>
            <span class="mx-2">/</span>
            <span class="text-gray-900">@Model.OrderNumber</span>
        </nav>
    </div>
</div>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-start mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Order @Model.OrderNumber</h1>
            <p class="text-gray-600 mt-1">Placed on @Model.CreatedAt.ToString("MMMM dd, yyyy")</p>
        </div>
        <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium @GetStatusColor(Model.Status)">
            @Model.Status
        </span>
    </div>

    <div class="grid lg:grid-cols-3 gap-8">
        <!-- Order Items -->
        <div class="lg:col-span-2">
            <div class="bg-white rounded-xl shadow-sm overflow-hidden">
                <div class="p-6 border-b">
                    <h2 class="text-lg font-semibold text-gray-900">Order Items</h2>
                </div>
                <div class="divide-y">
                    @foreach (var line in Model.Lines)
                    {
                        <div class="p-6 flex items-center gap-4">
                            <div class="w-20 h-20 bg-gray-100 rounded-lg overflow-hidden flex-shrink-0">
                                <img src="@(line.ImageUrl ?? "https://placehold.co/80x80/e2e8f0/64748b?text=Product")" alt="@line.ProductName" class="w-full h-full object-cover">
                            </div>
                            <div class="flex-1">
                                <h3 class="font-medium text-gray-900">@line.ProductName</h3>
                                <p class="text-sm text-gray-500">SKU: @line.Sku</p>
                                <p class="text-sm text-gray-500">Qty: @line.Quantity</p>
                            </div>
                            <div class="text-right">
                                <p class="font-semibold text-gray-900">$@line.LineTotal.ToString("F2")</p>
                                <p class="text-sm text-gray-500">$@line.UnitPrice.ToString("F2") each</p>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Shipping Info -->
            @if (Model.ShippingAddress != null)
            {
                <div class="bg-white rounded-xl shadow-sm p-6 mt-6">
                    <h2 class="text-lg font-semibold text-gray-900 mb-4">Shipping Address</h2>
                    <p class="text-gray-600">
                        @Model.ShippingAddress.FirstName @Model.ShippingAddress.LastName<br>
                        @Model.ShippingAddress.AddressLine1<br>
                        @if (!string.IsNullOrEmpty(Model.ShippingAddress.AddressLine2))
                        {
                            @Model.ShippingAddress.AddressLine2<br>
                        }
                        @Model.ShippingAddress.City, @Model.ShippingAddress.StateProvince @Model.ShippingAddress.PostalCode<br>
                        @Model.ShippingAddress.Country
                    </p>
                </div>
            }
        </div>

        <!-- Order Summary -->
        <div class="lg:col-span-1">
            <div class="bg-white rounded-xl shadow-sm p-6 sticky top-24">
                <h2 class="text-lg font-semibold text-gray-900 mb-4">Order Summary</h2>
                <div class="space-y-3">
                    <div class="flex justify-between text-gray-600">
                        <span>Subtotal</span>
                        <span>$@Model.Subtotal.ToString("F2")</span>
                    </div>
                    <div class="flex justify-between text-gray-600">
                        <span>Shipping</span>
                        <span>$@Model.ShippingTotal.ToString("F2")</span>
                    </div>
                    <div class="flex justify-between text-gray-600">
                        <span>Tax</span>
                        <span>$@Model.TaxTotal.ToString("F2")</span>
                    </div>
                    @if (Model.DiscountTotal > 0)
                    {
                        <div class="flex justify-between text-green-600">
                            <span>Discount</span>
                            <span>-$@Model.DiscountTotal.ToString("F2")</span>
                        </div>
                    }
                </div>
                <div class="border-t mt-4 pt-4">
                    <div class="flex justify-between text-lg font-semibold">
                        <span>Total</span>
                        <span>$@Model.GrandTotal.ToString("F2")</span>
                    </div>
                </div>

                <div class="mt-6 space-y-3">
                    <a href="#" class="block w-full text-center border border-primary-600 text-primary-600 py-2 rounded-lg font-medium hover:bg-primary-50 transition">
                        Track Order
                    </a>
                    <a href="/contact" class="block w-full text-center border border-gray-300 text-gray-700 py-2 rounded-lg font-medium hover:bg-gray-50 transition">
                        Need Help?
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusColor(OrderStatus status)
    {
        return status switch
        {
            OrderStatus.Pending => "bg-yellow-100 text-yellow-800",
            OrderStatus.Processing => "bg-blue-100 text-blue-800",
            OrderStatus.Shipped => "bg-purple-100 text-purple-800",
            OrderStatus.Delivered => "bg-green-100 text-green-800",
            OrderStatus.Cancelled => "bg-red-100 text-red-800",
            _ => "bg-gray-100 text-gray-800"
        };
    }
}
