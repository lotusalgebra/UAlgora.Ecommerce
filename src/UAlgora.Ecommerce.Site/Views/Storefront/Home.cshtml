@model HomeViewModel

<!-- Hero Carousel -->
<section class="relative" x-data="heroCarousel()">
    <div class="overflow-hidden">
        <div class="flex transition-transform duration-700 ease-out" :style="{ transform: `translateX(-${currentSlide * 100}%)` }">
            <!-- Slide 1 -->
