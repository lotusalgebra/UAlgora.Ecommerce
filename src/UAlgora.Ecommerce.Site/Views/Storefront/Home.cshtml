    <!-- Animated background elements -->
    <div class="absolute inset-0 overflow-hidden">
        <div class="absolute -top-10 -left-10 w-40 h-40 bg-white/10 rounded-full animate-pulse"></div>
        <div class="absolute -bottom-10 -right-10 w-60 h-60 bg-white/10 rounded-full animate-pulse delay-300"></div>
        <div class="absolute top-1/2 left-1/4 w-20 h-20 bg-white/5 rounded-full"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
        <div class="grid lg:grid-cols-2 gap-8 items-center">
            <div class="text-center lg:text-left">
                <span class="inline-block bg-white/20 backdrop-blur px-4 py-1.5 text-white text-xs font-accent tracking-[0.2em] uppercase mb-4">
                    Flash Sale
                </span>
                <h2 class="font-display text-4xl lg:text-6xl font-bold text-white leading-tight mb-4">
                    Up to <span class="font-accent text-5xl lg:text-7xl">70%</span><br>
                    Off Everything!
                </h2>
                <p class="text-white/80 text-lg mb-6">
                    Don't miss out on our biggest sale of the year.
                </p>
                <a href="/deals" class="inline-flex items-center gap-2 bg-white text-accent-600 px-8 py-4 text-sm uppercase tracking-widest font-bold hover:bg-fashion-black hover:text-white transition-all duration-300">
                    Shop All Deals
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                    </svg>
                </a>
            </div>

