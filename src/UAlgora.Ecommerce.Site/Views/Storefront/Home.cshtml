@model HomeViewModel

<!-- Full-Screen Split Hero -->
<section class="relative min-h-[100vh] lg:min-h-screen" x-data="heroCarousel()">
    <div class="overflow-hidden h-full">
        <div class="flex transition-transform duration-1000 ease-out h-full" :style="{ transform: `translateX(-${currentSlide * 100}%)` }">
            <!-- Slide 1 - Bold Fashion Statement -->
            <div class="w-full flex-shrink-0 min-h-[100vh] lg:min-h-screen">
                <div class="grid lg:grid-cols-5 h-full">
                    <!-- Image Side (60%) -->
                    <div class="lg:col-span-3 relative h-[50vh] lg:h-full">
                        <img src="https://images.unsplash.com/photo-1469334031218-e382a71b716b?w=1200&h=1600&fit=crop"
                             alt="Fashion Model"
                             class="w-full h-full object-cover">
                        <!-- Overlay Text on Image -->
                        <div class="absolute bottom-8 left-8 lg:bottom-16 lg:left-16">
                            <span class="font-accent text-7xl lg:text-[12rem] font-bold text-white/20 leading-none tracking-tight">
                                SS26
                            </span>
                        </div>
                    </div>
                    <!-- Text Side (40%) -->
                    <div class="lg:col-span-2 bg-fashion-black dark:bg-fashion-charcoal flex items-center justify-center p-8 lg:p-16">
                        <div class="text-white max-w-md">
                            <span class="inline-block text-primary-400 font-accent text-sm tracking-[0.3em] uppercase mb-4">
                                New Collection
                            </span>
                            <h1 class="font-display text-4xl lg:text-6xl font-bold leading-[1.1] mb-6">
                                Bold.<br>
                                <span class="text-primary-400">Fearless.</span><br>
                                Fashion.
                            </h1>
                            <p class="text-gray-400 text-lg mb-8 leading-relaxed">
                                Discover the Spring/Summer 2026 collection. Where confidence meets style.
                            </p>
                            <div class="flex flex-wrap gap-4">
                                <a href="/products" class="bg-white text-fashion-black px-8 py-4 text-sm uppercase tracking-widest font-medium hover:bg-primary-500 hover:text-white transition-all duration-300">
                                    Shop Collection
                                </a>
                                <a href="/products?category=new" class="border border-white/30 text-white px-8 py-4 text-sm uppercase tracking-widest font-medium hover:border-white hover:bg-white hover:text-fashion-black transition-all duration-300">
                                    What's New
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Slide 2 - Sale Campaign -->
            <div class="w-full flex-shrink-0 min-h-[100vh] lg:min-h-screen">
                <div class="grid lg:grid-cols-5 h-full">
                    <div class="lg:col-span-3 relative h-[50vh] lg:h-full">
                        <img src="https://images.unsplash.com/photo-1558618666-fcd25c85cd64?w=1200&h=1600&fit=crop"
                             alt="Sale Fashion"
                             class="w-full h-full object-cover">
                        <div class="absolute bottom-8 left-8 lg:bottom-16 lg:left-16">
                            <span class="font-accent text-7xl lg:text-[12rem] font-bold text-accent-500/30 leading-none tracking-tight">
                                SALE
                            </span>
                        </div>
                    </div>
                    <div class="lg:col-span-2 bg-accent-600 flex items-center justify-center p-8 lg:p-16">
                        <div class="text-white max-w-md">
                            <span class="inline-block text-white/80 font-accent text-sm tracking-[0.3em] uppercase mb-4">
                                Limited Time
                            </span>
                            <h1 class="font-display text-4xl lg:text-6xl font-bold leading-[1.1] mb-6">
                                Up to<br>
                                <span class="font-accent text-6xl lg:text-8xl">50%</span><br>
                                Off Everything
                            </h1>
                            <p class="text-white/80 text-lg mb-8 leading-relaxed">
                                Don't miss out on our biggest sale of the season.
                            </p>
                            <a href="/deals" class="inline-block bg-white text-accent-600 px-8 py-4 text-sm uppercase tracking-widest font-medium hover:bg-fashion-black hover:text-white transition-all duration-300">
                                Shop the Sale
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Slide 3 - Evening Collection -->
            <div class="w-full flex-shrink-0 min-h-[100vh] lg:min-h-screen">
                <div class="grid lg:grid-cols-5 h-full">
                    <div class="lg:col-span-3 relative h-[50vh] lg:h-full">
                        <img src="https://images.unsplash.com/photo-1518911710364-17ec553bde5d?w=1200&h=1600&fit=crop"
                             alt="Evening Collection"
                             class="w-full h-full object-cover">
                        <div class="absolute bottom-8 left-8 lg:bottom-16 lg:left-16">
                            <span class="font-accent text-7xl lg:text-[12rem] font-bold text-gold/30 leading-none tracking-tight">
                                LUXE
                            </span>
                        </div>
                    </div>
                    <div class="lg:col-span-2 bg-fashion-charcoal flex items-center justify-center p-8 lg:p-16">
                        <div class="text-white max-w-md">
                            <span class="inline-block text-gold font-accent text-sm tracking-[0.3em] uppercase mb-4">
                                Evening Edit
                            </span>
                            <h1 class="font-display text-4xl lg:text-6xl font-bold leading-[1.1] mb-6">
                                Make an<br>
                                <span class="text-gold">Entrance.</span>
                            </h1>
                            <p class="text-gray-400 text-lg mb-8 leading-relaxed">
                                Elevate your evening wardrobe with statement pieces designed to turn heads.
                            </p>
                            <a href="/products?category=evening" class="inline-block bg-gold text-fashion-black px-8 py-4 text-sm uppercase tracking-widest font-medium hover:bg-white transition-all duration-300">
                                Explore Collection
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Carousel Navigation -->
    <button @@click="prevSlide()" class="absolute left-4 lg:left-8 top-1/2 -translate-y-1/2 w-12 h-12 border border-white/30 hover:bg-white hover:text-fashion-black rounded-full flex items-center justify-center text-white transition z-10">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 19l-7-7 7-7"/>
        </svg>
    </button>
    <button @@click="nextSlide()" class="absolute right-4 lg:right-8 top-1/2 -translate-y-1/2 w-12 h-12 border border-white/30 hover:bg-white hover:text-fashion-black rounded-full flex items-center justify-center text-white transition z-10">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5l7 7-7 7"/>
        </svg>
    </button>

    <!-- Slide Indicators -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 lg:left-auto lg:right-16 lg:translate-x-0 flex gap-3 z-10">
        <template x-for="(slide, index) in totalSlides" :key="index">
            <button @@click="goToSlide(index)"
                    :class="currentSlide === index ? 'bg-white w-12' : 'bg-white/30 w-3 hover:bg-white/60'"
                    class="h-0.5 transition-all duration-500"></button>
        </template>
    </div>
</section>

