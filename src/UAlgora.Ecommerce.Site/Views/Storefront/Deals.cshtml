@model ProductListViewModel

<!-- Hero Banner -->
<section class="bg-gradient-to-r from-red-600 to-orange-500 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <span class="inline-block bg-white/20 text-white px-4 py-1 rounded-full text-sm font-medium mb-4">Limited Time Offers</span>
        <h1 class="text-4xl lg:text-5xl font-bold mb-4">Hot Deals & Offers</h1>
        <p class="text-xl text-red-100 max-w-2xl mx-auto">Save big on our best products. Don't miss out on these amazing discounts!</p>
    </div>
</section>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Countdown Timer -->
    <div class="bg-gray-900 text-white rounded-2xl p-8 mb-12" x-data="countdown()">
        <div class="text-center">
            <h2 class="text-2xl font-bold mb-2">Flash Sale Ends In</h2>
            <div class="flex justify-center gap-4 mt-6">
                <div class="bg-white/10 rounded-lg p-4 min-w-[80px]">
                    <div class="text-3xl font-bold" x-text="hours">00</div>
                    <div class="text-sm text-gray-400">Hours</div>
                </div>
                <div class="bg-white/10 rounded-lg p-4 min-w-[80px]">
                    <div class="text-3xl font-bold" x-text="minutes">00</div>
                    <div class="text-sm text-gray-400">Minutes</div>
                </div>
                <div class="bg-white/10 rounded-lg p-4 min-w-[80px]">
                    <div class="text-3xl font-bold" x-text="seconds">00</div>
                    <div class="text-sm text-gray-400">Seconds</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Deal Categories -->
    <div class="flex flex-wrap gap-4 mb-8 justify-center">
        <a href="/deals" class="px-6 py-2 bg-primary-600 text-white rounded-full font-medium">All Deals</a>
        <a href="/deals?category=electronics" class="px-6 py-2 bg-white border rounded-full font-medium hover:bg-gray-50">Electronics</a>
        <a href="/deals?category=clothing" class="px-6 py-2 bg-white border rounded-full font-medium hover:bg-gray-50">Clothing</a>
        <a href="/deals?category=home" class="px-6 py-2 bg-white border rounded-full font-medium hover:bg-gray-50">Home & Garden</a>
        <a href="/deals?category=sports" class="px-6 py-2 bg-white border rounded-full font-medium hover:bg-gray-50">Sports</a>
    </div>

    <!-- Products Grid -->
    <div class="mb-8">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-900">@Model.TotalCount Products on Sale</h2>
            <select class="px-4 py-2 border rounded-lg text-sm" onchange="window.location.href='/deals?sort=' + this.value">
                <option value="">Sort by: Featured</option>
                <option value="price-asc">Price: Low to High</option>
                <option value="price-desc">Price: High to Low</option>
                <option value="discount">Biggest Discount</option>
            </select>
        </div>

        @if (Model.Products.Any())
        {
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                @foreach (var product in Model.Products)
                {
                    <partial name="_ProductCard" model="product" />
                }
            </div>
        }
        else
        {
            <div class="text-center py-16">
                <svg class="w-24 h-24 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">No deals available right now</h3>
                <p class="text-gray-600 mb-6">Check back soon for new offers!</p>
                <a href="/products" class="inline-block bg-primary-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-primary-700 transition">
                    Browse All Products
                </a>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav class="flex justify-center">
            <ul class="flex items-center gap-1">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li>
                        <a href="/deals?page=@i" class="px-4 py-2 rounded-lg transition @(i == Model.Page ? "bg-primary-600 text-white" : "border hover:bg-gray-50")">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

<!-- Newsletter CTA -->
<section class="bg-gray-100 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Don't Miss Out on Deals!</h2>
        <p class="text-gray-600 mb-6">Subscribe to get notified about our latest offers and discounts.</p>
        <form class="flex flex-col sm:flex-row max-w-md mx-auto gap-4">
            <input type="email" placeholder="Enter your email" class="flex-1 px-4 py-3 border rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
            <button type="submit" class="bg-primary-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-primary-700 transition">
                Subscribe
            </button>
        </form>
    </div>
</section>

@section Scripts {
<script>
function countdown() {
    return {
        hours: '12',
        minutes: '34',
        seconds: '56',
        init() {
            this.updateCountdown();
            setInterval(() => this.updateCountdown(), 1000);
        },
        updateCountdown() {
            const now = new Date();
            const endOfDay = new Date();
            endOfDay.setHours(23, 59, 59, 999);
            const diff = endOfDay - now;

            this.hours = String(Math.floor(diff / (1000 * 60 * 60))).padStart(2, '0');
            this.minutes = String(Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60))).padStart(2, '0');
            this.seconds = String(Math.floor((diff % (1000 * 60)) / 1000)).padStart(2, '0');
        }
    };
}
</script>
}
