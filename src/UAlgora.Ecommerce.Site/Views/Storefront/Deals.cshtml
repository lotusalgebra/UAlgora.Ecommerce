@model ProductListViewModel

<div class="min-h-screen bg-gray-50 dark:bg-fashion-charcoal">
    <!-- Hero Banner -->
    <section class="bg-gradient-to-br from-accent-500 via-accent-600 to-primary-600 dark:from-accent-700 dark:via-accent-800 dark:to-primary-800 relative overflow-hidden">
        <div class="absolute inset-0 opacity-20">
            <div class="absolute inset-0 animate-pulse" style="background-image: url('data:image/svg+xml,%3Csvg width=\"100\" height=\"100\" viewBox=\"0 0 100 100\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Ctext x=\"50\" y=\"50\" font-size=\"60\" text-anchor=\"middle\" dominant-baseline=\"middle\" fill=\"%23fff\" opacity=\"0.3\"%3E%%3C/text%3E%3C/svg%3E');"></div>
        </div>
        <div class="absolute -top-20 -left-20 w-96 h-96 bg-white/10 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-20 -right-20 w-96 h-96 bg-white/10 rounded-full blur-3xl"></div>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-24 relative">
            <div class="text-center">
                <span class="inline-flex items-center gap-2 bg-white/20 backdrop-blur-sm text-white px-5 py-2 text-sm font-accent tracking-widest uppercase mb-6">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd"/>
                    </svg>
                    Limited Time Offers
                </span>
                <h1 class="font-display text-5xl lg:text-7xl font-bold text-white mb-6">
                    SALE<span class="text-gold">.</span>
                </h1>
                <p class="text-xl lg:text-2xl text-white/80 max-w-2xl mx-auto font-light">
                    Up to <span class="font-display font-bold text-gold">70% OFF</span> on selected styles. Don't miss out!
                </p>
            </div>
        </div>
    </section>

    <!-- Countdown Timer -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 -mt-12 relative z-10" x-data="countdown()">
        <div class="bg-fashion-black dark:bg-fashion-slate border border-gray-800 p-8">
            <div class="flex flex-col lg:flex-row items-center justify-between gap-6">
                <div class="text-white text-center lg:text-left">
                    <p class="text-xs uppercase tracking-widest text-gray-400 mb-1">Flash Sale Ends In</p>
                    <p class="font-display text-xl font-bold">Don't Miss Out!</p>
                </div>
                <div class="flex items-center gap-4">
                    <div class="text-center">
                        <div class="w-20 h-20 bg-accent-500 flex items-center justify-center">
                            <span class="font-display text-3xl font-bold text-white" x-text="hours">00</span>
                        </div>
                        <p class="text-xs text-gray-400 mt-2 uppercase tracking-wider">Hours</p>
                    </div>
                    <span class="text-2xl text-accent-500 font-bold">:</span>
                    <div class="text-center">
                        <div class="w-20 h-20 bg-accent-500 flex items-center justify-center">
                            <span class="font-display text-3xl font-bold text-white" x-text="minutes">00</span>
                        </div>
                        <p class="text-xs text-gray-400 mt-2 uppercase tracking-wider">Minutes</p>
                    </div>
                    <span class="text-2xl text-accent-500 font-bold">:</span>
                    <div class="text-center">
                        <div class="w-20 h-20 bg-accent-500 flex items-center justify-center">
                            <span class="font-display text-3xl font-bold text-white" x-text="seconds">00</span>
                        </div>
                        <p class="text-xs text-gray-400 mt-2 uppercase tracking-wider">Seconds</p>
                    </div>
                </div>
                <div>
                    <a href="#deals" class="inline-flex items-center gap-2 bg-white text-fashion-black px-6 py-3 text-sm uppercase tracking-widest font-medium hover:bg-gold transition-colors">
                        Shop Now
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <!-- Discount Tiers -->
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-12">
            <a href="/deals?discount=20" class="group block p-6 bg-white dark:bg-fashion-black border border-gray-200 dark:border-gray-800 text-center hover:border-accent-500 transition">
                <span class="font-accent text-4xl lg:text-5xl text-accent-500">20%</span>
                <p class="text-xs uppercase tracking-widest text-gray-500 dark:text-gray-400 mt-2 group-hover:text-fashion-black dark:group-hover:text-white transition">Off & More</p>
            </a>
            <a href="/deals?discount=30" class="group block p-6 bg-white dark:bg-fashion-black border border-gray-200 dark:border-gray-800 text-center hover:border-accent-500 transition">
                <span class="font-accent text-4xl lg:text-5xl text-accent-500">30%</span>
                <p class="text-xs uppercase tracking-widest text-gray-500 dark:text-gray-400 mt-2 group-hover:text-fashion-black dark:group-hover:text-white transition">Off & More</p>
            </a>
            <a href="/deals?discount=50" class="group block p-6 bg-accent-500 text-center hover:bg-accent-600 transition">
                <span class="font-accent text-4xl lg:text-5xl text-white">50%</span>
                <p class="text-xs uppercase tracking-widest text-white/80 mt-2">Off & More</p>
            </a>
            <a href="/deals?discount=70" class="group block p-6 bg-fashion-black dark:bg-gold text-center hover:bg-gold dark:hover:bg-gold-dark transition">
                <span class="font-accent text-4xl lg:text-5xl text-gold dark:text-fashion-black group-hover:text-fashion-black">70%</span>
                <p class="text-xs uppercase tracking-widest text-gray-400 dark:text-fashion-black/80 group-hover:text-fashion-black/80 mt-2">Off & More</p>
            </a>
        </div>

        <!-- Category Pills -->
        <div class="flex flex-wrap gap-3 mb-8 justify-center">
            <a href="/deals" class="px-6 py-3 bg-fashion-black dark:bg-white text-white dark:text-fashion-black text-xs uppercase tracking-widest font-medium">
                All Deals
            </a>
            @foreach (var category in new[] { "Dresses", "Tops", "Bottoms", "Outerwear", "Accessories", "Shoes" })
            {
                <a href="/deals?category=@category.ToLower()" class="px-6 py-3 border border-gray-300 dark:border-gray-700 text-gray-600 dark:text-gray-400 text-xs uppercase tracking-widest font-medium hover:border-fashion-black dark:hover:border-white hover:text-fashion-black dark:hover:text-white transition">
                    @category
                </a>
            }
        </div>

        <!-- Products Section -->
        <div id="deals" class="mb-12">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
                <div>
                    <h2 class="font-display text-2xl font-bold text-fashion-black dark:text-white">
                        All Deals<span class="text-accent-500">.</span>
                    </h2>
                    <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">@Model.TotalCount products on sale</p>
                </div>
                <div class="relative">
                    <select class="appearance-none px-5 py-3 pr-10 border border-gray-300 dark:border-gray-700 bg-white dark:bg-fashion-black text-fashion-black dark:text-white text-sm focus:ring-2 focus:ring-accent-500 focus:border-accent-500"
                            onchange="window.location.href='/deals?sort=' + this.value">
                        <option value="">Sort by: Featured</option>
                        <option value="price-asc">Price: Low to High</option>
                        <option value="price-desc">Price: High to Low</option>
                        <option value="discount">Biggest Discount</option>
                        <option value="newest">Newest First</option>
                    </select>
                    <svg class="absolute right-3 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                    </svg>
                </div>
            </div>

            @if (Model.Products.Any())
            {
                <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 lg:gap-6">
                    @foreach (var product in Model.Products)
                    {
                        <partial name="_ProductCard" model="product" />
                    }
                </div>
            }
            else
            {
                <div class="bg-white dark:bg-fashion-black border border-gray-200 dark:border-gray-800 py-20 text-center">
                    <div class="w-24 h-24 mx-auto mb-8 bg-gray-100 dark:bg-fashion-charcoal rounded-full flex items-center justify-center">
                        <svg class="w-12 h-12 text-gray-300 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                    <h3 class="font-display text-2xl font-bold text-fashion-black dark:text-white mb-3">No deals right now</h3>
                    <p class="text-gray-500 dark:text-gray-400 mb-8 max-w-md mx-auto">Check back soon for amazing discounts on your favorite styles!</p>
                    <a href="/products" class="inline-flex items-center gap-2 bg-fashion-black dark:bg-white text-white dark:text-fashion-black px-8 py-4 text-sm uppercase tracking-widest font-medium hover:bg-primary-600 dark:hover:bg-primary-400 hover:text-white transition-colors">
                        Browse All Products
                    </a>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav class="flex justify-center mb-12">
                <div class="flex items-center gap-2">
                    @if (Model.Page > 1)
                    {
                        <a href="/deals?page=@(Model.Page - 1)" class="w-10 h-10 flex items-center justify-center border border-gray-300 dark:border-gray-700 text-gray-600 dark:text-gray-400 hover:border-fashion-black dark:hover:border-white hover:text-fashion-black dark:hover:text-white transition">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                            </svg>
                        </a>
                    }
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <a href="/deals?page=@i" class="w-10 h-10 flex items-center justify-center text-sm font-medium transition @(i == Model.Page ? "bg-fashion-black dark:bg-white text-white dark:text-fashion-black" : "border border-gray-300 dark:border-gray-700 text-gray-600 dark:text-gray-400 hover:border-fashion-black dark:hover:border-white hover:text-fashion-black dark:hover:text-white")">
                            @i
                        </a>
                    }
                    @if (Model.Page < Model.TotalPages)
                    {
                        <a href="/deals?page=@(Model.Page + 1)" class="w-10 h-10 flex items-center justify-center border border-gray-300 dark:border-gray-700 text-gray-600 dark:text-gray-400 hover:border-fashion-black dark:hover:border-white hover:text-fashion-black dark:hover:text-white transition">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </a>
                    }
                </div>
            </nav>
        }
    </div>

    <!-- Newsletter CTA -->
    <section class="bg-fashion-black dark:bg-fashion-slate py-16 lg:py-20">
        <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <span class="text-accent-500 font-accent text-sm tracking-[0.3em] uppercase">Never Miss a Deal</span>
            <h2 class="font-display text-3xl lg:text-4xl font-bold text-white mt-3 mb-4">
                Get Exclusive Offers<span class="text-accent-500">.</span>
            </h2>
            <p class="text-gray-400 mb-8 max-w-xl mx-auto">
                Be the first to know about new arrivals, exclusive discounts, and special offers. Join our VIP list!
            </p>
            <form class="flex flex-col sm:flex-row max-w-md mx-auto gap-3">
                <div class="relative flex-1">
                    <input type="email" placeholder="Enter your email"
                           class="w-full px-5 py-4 bg-white/10 border border-white/20 text-white placeholder-gray-400 focus:ring-2 focus:ring-accent-500 focus:border-accent-500 transition">
                </div>
                <button type="submit" class="bg-accent-500 text-white px-8 py-4 text-sm uppercase tracking-widest font-medium hover:bg-accent-600 transition-colors flex items-center justify-center gap-2">
                    Subscribe
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                    </svg>
                </button>
            </form>
            <p class="text-xs text-gray-500 mt-4">Unsubscribe anytime. We respect your privacy.</p>
        </div>
    </section>
</div>

@section Scripts {
<script>
function countdown() {
    return {
        hours: '00',
        minutes: '00',
        seconds: '00',
        init() {
            this.updateCountdown();
            setInterval(() => this.updateCountdown(), 1000);
        },
        updateCountdown() {
            const now = new Date();
            const endOfDay = new Date();
            endOfDay.setHours(23, 59, 59, 999);
            const diff = endOfDay - now;

            this.hours = String(Math.floor(diff / (1000 * 60 * 60))).padStart(2, '0');
            this.minutes = String(Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60))).padStart(2, '0');
            this.seconds = String(Math.floor((diff % (1000 * 60)) / 1000)).padStart(2, '0');
        }
    };
}
</script>
}
