@functions {
    string updatePageUrl(int targetPage)
    {
        var request = Context.Request;
        var query = new List<string>();
        if (!string.IsNullOrEmpty(request.Query["category"].ToString())) query.Add($"category={request.Query["category"]}");
        if (!string.IsNullOrEmpty(request.Query["search"].ToString())) query.Add($"search={request.Query["search"]}");
        if (!string.IsNullOrEmpty(request.Query["sort"].ToString())) query.Add($"sort={request.Query["sort"]}");
        if (!string.IsNullOrEmpty(request.Query["minPrice"].ToString())) query.Add($"minPrice={request.Query["minPrice"]}");
        if (!string.IsNullOrEmpty(request.Query["maxPrice"].ToString())) query.Add($"maxPrice={request.Query["maxPrice"]}");
        if (request.Query["sale"].ToString() == "true") query.Add("sale=true");
        if (request.Query["inStock"].ToString() == "true") query.Add("inStock=true");
        query.Add($"page={targetPage}");
        return Model.Url() + "?" + string.Join("&", query);
    }

    string updateSortUrl(string sort)
    {
        var request = Context.Request;
        var query = new List<string>();
        if (!string.IsNullOrEmpty(request.Query["category"].ToString())) query.Add($"category={request.Query["category"]}");
        if (!string.IsNullOrEmpty(request.Query["search"].ToString())) query.Add($"search={request.Query["search"]}");
        if (!string.IsNullOrEmpty(sort)) query.Add($"sort={sort}");
        if (!string.IsNullOrEmpty(request.Query["minPrice"].ToString())) query.Add($"minPrice={request.Query["minPrice"]}");
        if (!string.IsNullOrEmpty(request.Query["maxPrice"].ToString())) query.Add($"maxPrice={request.Query["maxPrice"]}");
        if (request.Query["sale"].ToString() == "true") query.Add("sale=true");
        if (request.Query["inStock"].ToString() == "true") query.Add("inStock=true");
        return Model.Url() + (query.Any() ? "?" + string.Join("&", query) : "");
    }

    string updateCategoryUrl(Guid? catId)
    {
        var request = Context.Request;
        var query = new List<string>();
        if (catId.HasValue) query.Add($"category={catId}");
        if (!string.IsNullOrEmpty(request.Query["search"].ToString())) query.Add($"search={request.Query["search"]}");
        if (!string.IsNullOrEmpty(request.Query["sort"].ToString())) query.Add($"sort={request.Query["sort"]}");
        if (!string.IsNullOrEmpty(request.Query["minPrice"].ToString())) query.Add($"minPrice={request.Query["minPrice"]}");
        if (!string.IsNullOrEmpty(request.Query["maxPrice"].ToString())) query.Add($"maxPrice={request.Query["maxPrice"]}");
        if (request.Query["sale"].ToString() == "true") query.Add("sale=true");
        if (request.Query["inStock"].ToString() == "true") query.Add("inStock=true");
        return Model.Url() + (query.Any() ? "?" + string.Join("&", query) : "");
    }
}

@section Scripts {
<style>
.scrollbar-hide::-webkit-scrollbar {
    display: none;
}
.scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
}
</style>

<script>
function updateQueryParam(key, value) {
    const url = new URL(window.location.href);
    if (value) {
        url.searchParams.set(key, value);
    } else {
        url.searchParams.delete(key);
    }
    url.searchParams.delete('page'); // Reset to page 1
    return url.toString();
}

function applyFilter(key, value) {
    window.location.href = updateQueryParam(key, value ? 'true' : '');
}
</script>
