@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en" class="scroll-smooth" x-data="{ darkMode: localStorage.getItem('darkMode') === 'true' }" :class="{ 'dark': darkMode }">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VOGUE Fashion</title>
    <meta name="description" content="@ViewData["Description"]" />

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        // Bold Magenta/Fuchsia - Primary brand color
                        primary: {
                            50: "#fdf4ff", 100: "#fae8ff", 200: "#f5d0fe",
                            300: "#f0abfc", 400: "#e879f9", 500: "#d946ef",
                            600: "#c026d3", 700: "#a21caf", 800: "#86198f",
                            900: "#701a75", 950: "#4a044e"
                        },
                        // Electric Coral - Accent/CTA color
                        accent: {
                            50: "#fff1f2", 100: "#ffe4e6", 200: "#fecdd3",
                            300: "#fda4af", 400: "#fb7185", 500: "#f43f5e",
                            600: "#e11d48", 700: "#be123c", 800: "#9f1239", 900: "#881337"
                        },
                        // Fashion colors
                        fashion: {
                            black: "#0d0d0d",
                            charcoal: "#1a1a1a",
                            slate: "#2d2d2d"
                        },
                        // Gold accents
                        gold: {
                            light: "#fef3c7",
                            DEFAULT: "#f59e0b",
                            dark: "#b45309"
                        }
                    },
                    fontFamily: {
                        'display': ['Playfair Display', 'Georgia', 'serif'],
                        'body': ['Inter', 'system-ui', 'sans-serif'],
                        'accent': ['Bebas Neue', 'Impact', 'sans-serif']
                    },
                    fontSize: {
                        'hero': ['4.5rem', { lineHeight: '1.1', letterSpacing: '-0.02em' }],
                        'display': ['3rem', { lineHeight: '1.2', letterSpacing: '-0.01em' }],
                        'title': ['2rem', { lineHeight: '1.3' }]
                    }
                }
            }
        }
    </script>

    <!-- Flowbite CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.1/flowbite.min.css" rel="stylesheet" />

    <!-- Google Fonts - Fashion Typography -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700;800&family=Inter:wght@300;400;500;600;700&family=Bebas+Neue&display=swap" rel="stylesheet">

    <!-- Custom Fashion Styles -->
    <style>
        [x-cloak] { display: none !important; }
        .line-clamp-2 { display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }

        /* Product Card Hover Effects */
        .product-card:hover .product-actions { opacity: 1; transform: translateY(0); }
        .product-card .product-actions { opacity: 0; transform: translateY(10px); transition: all 0.3s ease; }
        .product-card:hover .product-image img { transform: scale(1.08); }
        .product-card .product-image img { transition: transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94); }

        /* Fashion Button Styles */
        .btn-fashion {
            text-transform: uppercase;
            letter-spacing: 0.1em;
            font-weight: 500;
            transition: all 0.3s;
        }
        .btn-fashion:hover {
            transform: translateY(-2px);
        }

        /* Gradient Text */
        .gradient-text {
            background: linear-gradient(135deg, #d946ef 0%, #f43f5e 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* Mega Menu Animation */
        .mega-menu {
            transform: translateY(10px);
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
        }
        .mega-menu-trigger:hover .mega-menu {
            transform: translateY(0);
            opacity: 1;
            visibility: visible;
        }

        /* Sale Badge Pulse */
        .sale-badge {
            animation: pulse-scale 2s ease-in-out infinite;
        }
        @@keyframes pulse-scale {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        /* Scroll Animation */
        .fade-up {
            opacity: 0;
            transform: translateY(30px);
            transition: all 0.6s ease;
        }
        .fade-up.visible {
            opacity: 1;
            transform: translateY(0);
        }
    </style>

    <!-- Alpine.js -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    @await RenderSectionAsync("Styles", required: false)
</head>
