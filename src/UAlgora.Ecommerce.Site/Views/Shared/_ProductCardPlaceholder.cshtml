@* Product Card Skeleton - Bold Fashion Style *@
<div class="bg-white dark:bg-fashion-black border border-gray-200 dark:border-gray-800 overflow-hidden animate-pulse">
    <!-- Image Skeleton (4:5 aspect ratio) -->
    <div class="aspect-[4/5] bg-gray-200 dark:bg-fashion-charcoal relative">
        <!-- Badge placeholder -->
        <div class="absolute top-3 left-3 w-16 h-6 bg-gray-300 dark:bg-gray-700"></div>
        <!-- Wishlist placeholder -->
        <div class="absolute top-3 right-3 w-9 h-9 bg-gray-300 dark:bg-gray-700 rounded-full"></div>
    </div>

    <!-- Content Skeleton -->
    <div class="p-4">
        <!-- Brand -->
        <div class="h-3 bg-gray-200 dark:bg-fashion-charcoal w-16 mb-2"></div>

        <!-- Product Name (2 lines) -->
        <div class="h-4 bg-gray-200 dark:bg-fashion-charcoal w-full mb-1.5"></div>
        <div class="h-4 bg-gray-200 dark:bg-fashion-charcoal w-3/4 mb-3"></div>

        <!-- Price -->
        <div class="flex items-baseline gap-2 mb-3">
            <div class="h-5 bg-gray-200 dark:bg-fashion-charcoal w-16"></div>
            <div class="h-4 bg-gray-200 dark:bg-fashion-charcoal w-12"></div>
        </div>

        <!-- Size Dots -->
        <div class="flex items-center gap-1.5 mb-4">
            <div class="w-5 h-5 bg-gray-200 dark:bg-fashion-charcoal rounded-full"></div>
            <div class="w-5 h-5 bg-gray-200 dark:bg-fashion-charcoal rounded-full"></div>
            <div class="w-5 h-5 bg-gray-200 dark:bg-fashion-charcoal rounded-full"></div>
            <div class="w-5 h-5 bg-gray-200 dark:bg-fashion-charcoal rounded-full"></div>
            <div class="w-5 h-5 bg-gray-200 dark:bg-fashion-charcoal rounded-full"></div>
        </div>

        <!-- Add to Bag Button -->
        <div class="h-12 bg-gray-200 dark:bg-fashion-charcoal w-full"></div>
    </div>
</div>
