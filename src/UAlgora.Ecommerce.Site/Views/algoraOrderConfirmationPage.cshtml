@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using UAlgora.Ecommerce.Core.Interfaces.Services
@inject IOrderService OrderService
@{
    Layout = "_Layout";

    // Get order number from query string
    var orderNumber = Context.Request.Query["orderNumber"].ToString();

    // Load order
    var order = !string.IsNullOrEmpty(orderNumber) ? await OrderService.GetByOrderNumberAsync(orderNumber) : null;

    if (order == null)
    {
        Context.Response.Redirect("/");
        return;
    }

    // Hero
    var heroTitle = Model.Value<string>("heroTitle") ?? "Order Confirmed";
    var heroSubtitle = Model.Value<string>("heroSubtitle") ?? "Thank you for your purchase, you're going to love it.";
    var orderNumberPrefix = Model.Value<string>("orderNumberPrefix") ?? "Order #";
    var showConfetti = Model.Value<bool>("showConfetti");

    // Order Info
    var orderNumberLabel = Model.Value<string>("orderNumberLabel") ?? "Order Number";
    var orderDateLabel = Model.Value<string>("orderDateLabel") ?? "Order Date";
    var paymentLabel = Model.Value<string>("paymentLabel") ?? "Payment";
    var paidText = Model.Value<string>("paidText") ?? "Paid";

    // Email
    var emailTitle = Model.Value<string>("emailTitle") ?? "Confirmation Email Sent";
    var emailDescriptionTemplate = Model.Value<string>("emailDescription") ?? "We've sent order details and tracking info to {email}";
    var customerEmail = order.CustomerEmail ?? "your email";
    var emailDescription = emailDescriptionTemplate.Replace("{email}", customerEmail);

    // Status
    var statusTitle = Model.Value<string>("statusTitle") ?? "Order Status";
    var confirmedLabel = Model.Value<string>("confirmedLabel") ?? "Confirmed";
    var processingLabel = Model.Value<string>("processingLabel") ?? "Processing";
    var shippedLabel = Model.Value<string>("shippedLabel") ?? "Shipped";
    var deliveredLabel = Model.Value<string>("deliveredLabel") ?? "Delivered";

    // Delivery
    var deliveryLabel = Model.Value<string>("deliveryLabel") ?? "Estimated Delivery";
    var deliveryDaysMin = Model.Value<int?>("deliveryDaysMin") ?? 5;
    var deliveryDaysMax = Model.Value<int?>("deliveryDaysMax") ?? 7;
    var deliveryDateMin = DateTime.Now.AddDays(deliveryDaysMin);
    var deliveryDateMax = DateTime.Now.AddDays(deliveryDaysMax);

    // Actions
    var viewOrderText = Model.Value<string>("viewOrderText") ?? "View Order Details";
    var continueShoppingText = Model.Value<string>("continueShoppingText") ?? "Continue Shopping";
    var continueShoppingUrl = Model.Value<string>("continueShoppingUrl") ?? "/products";

    // What's Next
    var showWhatsNext = Model.Value<bool>("showWhatsNext");
    var trackTitle = Model.Value<string>("trackTitle") ?? "Track Updates";
    var trackDescription = Model.Value<string>("trackDescription") ?? "We'll notify you when your order ships and is out for delivery.";
    var returnsTitle = Model.Value<string>("returnsTitle") ?? "Easy Returns";
    var returnDays = Model.Value<int?>("returnDays") ?? 30;
    var returnsDescription = Model.Value<string>("returnsDescription") ?? $"Not happy? Return within {returnDays} days for a full refund.";
    var pointsTitle = Model.Value<string>("pointsTitle") ?? "Earn Points";
    var pointsDescriptionTemplate = Model.Value<string>("pointsDescription") ?? "You earned {points} loyalty points with this purchase!";
    var earnedPoints = (int)(order.GrandTotal * 10); // Approximate points calculation
    var pointsDescription = pointsDescriptionTemplate.Replace("{points}", earnedPoints.ToString());
    var showLoyaltyPoints = Model.Value<bool>("showLoyaltyPoints");

    // Help
    var helpText = Model.Value<string>("helpText") ?? "Questions about your order?";
    var contactLinkText = Model.Value<string>("contactLinkText") ?? "Contact our support team";
    var contactUrl = Model.Value<string>("contactUrl") ?? "/contact";

    // SEO
    var metaTitle = Model.Value<string>("metaTitle") ?? "Order Confirmation";
    var metaDescription = Model.Value<string>("metaDescription") ?? "Your order has been confirmed";
    ViewData["Title"] = metaTitle;
    ViewData["MetaDescription"] = metaDescription;
}

<div class="min-h-screen bg-gray-50 dark:bg-fashion-charcoal relative overflow-hidden" x-data="{ showConfetti: @(showConfetti ? "true" : "false") }" x-init="setTimeout(() => showConfetti = false, 5000)">
    @if (showConfetti)
    {
        <!-- Confetti Animation -->
        <template x-if="showConfetti">
            <div class="fixed inset-0 pointer-events-none z-50" x-data="confetti()" x-init="init()">
                <template x-for="piece in pieces" :key="piece.id">
                    <div class="absolute w-3 h-3 animate-confetti"
                         :style="'left: ' + piece.x + '%; animation-delay: ' + piece.delay + 's; background-color: ' + piece.color + '; transform: rotate(' + piece.rotation + 'deg);'">
                    </div>
                </template>
            </div>
        </template>
    }

    <!-- Hero Success Section -->
    <div class="bg-gradient-to-br from-primary-600 via-primary-500 to-accent-500 dark:from-primary-800 dark:via-primary-700 dark:to-accent-700 relative">
        <div class="absolute inset-0 opacity-10">
            <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=&quot;60&quot; height=&quot;60&quot; viewBox=&quot;0 0 60 60&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;%3E%3Cg fill=&quot;none&quot; fill-rule=&quot;evenodd&quot;%3E%3Cg fill=&quot;%23ffffff&quot; fill-opacity=&quot;0.4&quot;%3E%3Cpath d=&quot;M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z&quot;/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
        </div>
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16 relative text-center">
            <!-- Animated Checkmark -->
            <div class="w-28 h-28 mx-auto mb-8 relative">
                <div class="absolute inset-0 bg-white/20 rounded-full animate-ping"></div>
                <div class="relative w-full h-full bg-white rounded-full flex items-center justify-center shadow-2xl">
                    <svg class="w-14 h-14 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"/>
                    </svg>
                </div>
            </div>

            <h1 class="font-display text-4xl lg:text-5xl font-bold text-white mb-4">
                @heroTitle<span class="text-accent-200">!</span>
            </h1>
            <p class="text-xl text-white/80 mb-2">@heroSubtitle</p>
            <p class="text-white/60">@orderNumberPrefix<span class="font-bold text-white">@orderNumber</span></p>
        </div>
    </div>

    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <!-- Order Status Card -->
        <div class="bg-white dark:bg-fashion-black border border-gray-200 dark:border-gray-800 -mt-8 relative z-10 mb-8">
            <div class="p-6 lg:p-8">
                <!-- Order Info Row -->
                <div class="flex flex-wrap items-center justify-between gap-6 pb-6 border-b border-gray-200 dark:border-gray-700 mb-6">
                    <div>
                        <p class="text-xs text-gray-400 uppercase tracking-wider mb-1">@orderNumberLabel</p>
                        <p class="font-display text-xl font-bold text-fashion-black dark:text-white">@orderNumber</p>
                    </div>
                    <div>
                        <p class="text-xs text-gray-400 uppercase tracking-wider mb-1">@orderDateLabel</p>
                        <p class="text-fashion-black dark:text-white">@(order.PlacedAt?.ToString("MMMM dd, yyyy") ?? DateTime.Now.ToString("MMMM dd, yyyy"))</p>
                    </div>
                    <div>
                        <p class="text-xs text-gray-400 uppercase tracking-wider mb-1">@paymentLabel</p>
                        <span class="inline-flex items-center gap-1.5 text-green-600 dark:text-green-400 font-medium">
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                            </svg>
                            @paidText
                        </span>
                    </div>
                </div>

                <!-- Email Confirmation -->
                <div class="flex items-start gap-4 p-4 bg-primary-50 dark:bg-primary-900/20 mb-6">
                    <div class="flex-shrink-0 w-10 h-10 bg-primary-100 dark:bg-primary-800 rounded-full flex items-center justify-center">
                        <svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                        </svg>
                    </div>
                    <div>
                        <p class="font-medium text-fashion-black dark:text-white">@emailTitle</p>
                        <p class="text-sm text-gray-600 dark:text-gray-400">
                            @Html.Raw(emailDescription.Replace(customerEmail, $"<strong class=\"text-fashion-black dark:text-white\">{customerEmail}</strong>"))
                        </p>
                    </div>
                </div>

                <!-- Order Progress -->
                <div class="mb-6">
                    <h3 class="font-display font-bold text-fashion-black dark:text-white mb-6">@statusTitle</h3>
                    <div class="relative">
                        <!-- Progress Line -->
                        <div class="absolute top-5 left-5 right-5 h-0.5 bg-gray-200 dark:bg-gray-700">
                            <div class="h-full bg-green-500 w-[12%]"></div>
                        </div>

                        <!-- Steps -->
                        <div class="relative flex justify-between">
                            <!-- Step 1: Confirmed -->
                            <div class="flex flex-col items-center">
                                <div class="w-10 h-10 bg-green-500 text-white rounded-full flex items-center justify-center shadow-lg z-10">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                    </svg>
                                </div>
                                <p class="mt-2 text-xs font-medium text-green-600 dark:text-green-400 uppercase tracking-wider">@confirmedLabel</p>
                            </div>

                            <!-- Step 2: Processing -->
                            <div class="flex flex-col items-center">
                                <div class="w-10 h-10 bg-gray-200 dark:bg-gray-700 text-gray-400 dark:text-gray-500 rounded-full flex items-center justify-center z-10">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                                    </svg>
                                </div>
                                <p class="mt-2 text-xs font-medium text-gray-400 dark:text-gray-500 uppercase tracking-wider">@processingLabel</p>
                            </div>

                            <!-- Step 3: Shipped -->
                            <div class="flex flex-col items-center">
                                <div class="w-10 h-10 bg-gray-200 dark:bg-gray-700 text-gray-400 dark:text-gray-500 rounded-full flex items-center justify-center z-10">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
                                    </svg>
                                </div>
                                <p class="mt-2 text-xs font-medium text-gray-400 dark:text-gray-500 uppercase tracking-wider">@shippedLabel</p>
                            </div>

                            <!-- Step 4: Delivered -->
                            <div class="flex flex-col items-center">
                                <div class="w-10 h-10 bg-gray-200 dark:bg-gray-700 text-gray-400 dark:text-gray-500 rounded-full flex items-center justify-center z-10">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                                    </svg>
                                </div>
                                <p class="mt-2 text-xs font-medium text-gray-400 dark:text-gray-500 uppercase tracking-wider">@deliveredLabel</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Estimated Delivery -->
                <div class="flex items-center gap-4 p-4 bg-fashion-black dark:bg-fashion-charcoal text-white">
                    <div class="flex-shrink-0">
                        <svg class="w-10 h-10 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                    </div>
                    <div>
                        <p class="text-sm text-gray-400 uppercase tracking-wider">@deliveryLabel</p>
                        <p class="font-display text-xl font-bold">@deliveryDateMin.ToString("MMM dd") - @deliveryDateMax.ToString("MMM dd, yyyy")</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
            <a href="/account/orders/@orderNumber" class="inline-flex items-center justify-center gap-2 px-8 py-4 border-2 border-fashion-black dark:border-white text-fashion-black dark:text-white text-sm uppercase tracking-widest font-medium hover:bg-fashion-black dark:hover:bg-white hover:text-white dark:hover:text-fashion-black transition">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                </svg>
                @viewOrderText
            </a>
            <a href="@continueShoppingUrl" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-fashion-black dark:bg-white text-white dark:text-fashion-black text-sm uppercase tracking-widest font-medium hover:bg-primary-600 dark:hover:bg-primary-400 hover:text-white transition-colors">
                @continueShoppingText
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
            </a>
        </div>

        @if (showWhatsNext)
        {
            <!-- What's Next Section -->
            <div class="grid md:grid-cols-3 gap-6 mb-12">
                <div class="bg-white dark:bg-fashion-black border border-gray-200 dark:border-gray-800 p-6 text-center">
                    <div class="w-14 h-14 mx-auto mb-4 bg-primary-100 dark:bg-primary-900/30 rounded-full flex items-center justify-center">
                        <svg class="w-7 h-7 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                        </svg>
                    </div>
                    <h3 class="font-display font-bold text-fashion-black dark:text-white mb-2">@trackTitle</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">@trackDescription</p>
                </div>

                <div class="bg-white dark:bg-fashion-black border border-gray-200 dark:border-gray-800 p-6 text-center">
                    <div class="w-14 h-14 mx-auto mb-4 bg-accent-100 dark:bg-accent-900/30 rounded-full flex items-center justify-center">
                        <svg class="w-7 h-7 text-accent-600 dark:text-accent-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                        </svg>
                    </div>
                    <h3 class="font-display font-bold text-fashion-black dark:text-white mb-2">@returnsTitle</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">@returnsDescription</p>
                </div>

                @if (showLoyaltyPoints)
                {
                    <div class="bg-white dark:bg-fashion-black border border-gray-200 dark:border-gray-800 p-6 text-center">
                        <div class="w-14 h-14 mx-auto mb-4 bg-gold-light dark:bg-gold/20 rounded-full flex items-center justify-center">
                            <svg class="w-7 h-7 text-gold-dark dark:text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
                            </svg>
                        </div>
                        <h3 class="font-display font-bold text-fashion-black dark:text-white mb-2">@pointsTitle</h3>
                        <p class="text-sm text-gray-500 dark:text-gray-400">@pointsDescription</p>
                    </div>
                }
            </div>
        }

        <!-- Help Section -->
        <div class="text-center py-8 border-t border-gray-200 dark:border-gray-800">
            <p class="text-gray-500 dark:text-gray-400">
                @helpText
                <a href="@contactUrl" class="text-primary-600 dark:text-primary-400 hover:underline font-medium">@contactLinkText</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
<script>
function confetti() {
    return {
        pieces: [],
        colors: ['#d946ef', '#f43f5e', '#f59e0b', '#22c55e', '#3b82f6'],
        init() {
            for (let i = 0; i < 50; i++) {
                this.pieces.push({
                    id: i,
                    x: Math.random() * 100,
                    delay: Math.random() * 2,
                    color: this.colors[Math.floor(Math.random() * this.colors.length)],
                    rotation: Math.random() * 360
                });
            }
        }
    };
}
</script>
<style>
@@keyframes confetti-fall {
    0% { transform: translateY(-100vh) rotate(0deg); opacity: 1; }
    100% { transform: translateY(100vh) rotate(720deg); opacity: 0; }
}
.animate-confetti {
    animation: confetti-fall 4s ease-in-out forwards;
}
</style>
}
