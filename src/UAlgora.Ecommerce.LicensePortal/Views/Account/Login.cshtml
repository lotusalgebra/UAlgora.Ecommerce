@{
    ViewData["Title"] = "Sign In";
    var returnUrl = ViewBag.ReturnUrl as string;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-sm border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="icon-circle bg-primary text-white mx-auto mb-3" style="width: 64px; height: 64px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="bi bi-person-circle fs-2"></i>
                        </div>
                        <h2 class="fw-bold">Sign In</h2>
                        <p class="text-muted">Access your licenses and subscriptions</p>
                    </div>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-circle me-2"></i>
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle me-2"></i>
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post" asp-action="SendLoginCode">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="returnUrl" value="@returnUrl" />

                        <div class="mb-4">
                            <label class="form-label fw-semibold">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-envelope text-muted"></i>
                                </span>
                                <input type="email"
                                       name="Email"
                                       class="form-control border-start-0 ps-0"
                                       placeholder="Enter your email"
                                       required
                                       autofocus />
                            </div>
                            <small class="text-muted">
                                Use the email address you used during license purchase
                            </small>
                        </div>

                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-send me-2"></i>
                                Send Login Code
                            </button>
                        </div>
                    </form>

                    <div class="text-center">
                        <p class="text-muted small mb-0">
                            We'll send a secure code to your email
                        </p>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <p class="text-muted">
                    Don't have a license?
                    <a href="@Url.Action("Pricing", "Home")" class="text-decoration-none">View pricing</a>
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .icon-circle {
        background: linear-gradient(135deg, var(--bs-primary), #764ba2);
    }
</style>
