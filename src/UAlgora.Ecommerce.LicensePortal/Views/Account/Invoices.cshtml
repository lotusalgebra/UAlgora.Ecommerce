@model UAlgora.Ecommerce.LicensePortal.Models.InvoicesPageViewModel
@{
    ViewData["Title"] = "Payment History";
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Account</a></li>
                    <li class="breadcrumb-item active">Payment History</li>
                </ol>
            </nav>
            <h1 class="mb-0">Payment History</h1>
            <p class="text-muted mb-0">@Model.TotalCount payment(s) - Total: @FormatCurrency(Model.TotalSpent, Model.Currency)</p>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Payments.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="border-0">Date</th>
                            <th class="border-0">Description</th>
                            <th class="border-0">Amount</th>
                            <th class="border-0">Status</th>
                            <th class="border-0">Payment Method</th>
                            <th class="border-0 text-end">Receipt</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payment in Model.Payments)
                        {
                            <tr>
                                <td class="align-middle">
                                    <div class="fw-semibold">
                                        @(payment.PaidAt?.ToString("MMM dd, yyyy") ?? payment.CreatedAt.ToString("MMM dd, yyyy"))
                                    </div>
                                    <div class="small text-muted">
                                        @(payment.PaidAt?.ToString("h:mm tt") ?? payment.CreatedAt.ToString("h:mm tt"))
                                    </div>
                                </td>
                                <td class="align-middle">
                                    <div class="fw-semibold">@payment.LicenseTypeName License</div>
                                    @if (payment.PeriodStart.HasValue && payment.PeriodEnd.HasValue)
                                    {
                                        <div class="small text-muted">
                                            @payment.PeriodStart.Value.ToString("MMM dd, yyyy") - @payment.PeriodEnd.Value.ToString("MMM dd, yyyy")
                                        </div>
                                    }
                                </td>
                                <td class="align-middle">
                                    <span class="fw-bold">@payment.FormattedAmount</span>
                                </td>
                                <td class="align-middle">
                                    <span class="badge bg-@payment.StatusClass">@payment.StatusName</span>
                                </td>
                                <td class="align-middle">
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(payment.CardBrand))
                                        {
                                            <i class="bi bi-credit-card me-2"></i>
                                            <span>@payment.CardBrand</span>
                                            @if (!string.IsNullOrEmpty(payment.CardLast4))
                                            {
                                                <span class="text-muted ms-1">****@payment.CardLast4</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">@payment.PaymentProvider</span>
                                        }
                                    </div>
                                </td>
                                <td class="align-middle text-end">
                                    @if (!string.IsNullOrEmpty(payment.ReceiptUrl) || !string.IsNullOrEmpty(payment.InvoiceUrl))
                                    {
                                        <a href="@Url.Action("DownloadReceipt", new { id = payment.Id })"
                                           class="btn btn-sm btn-outline-primary"
                                           target="_blank">
                                            <i class="bi bi-download me-1"></i>
                                            Receipt
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Summary Card -->
        <div class="row mt-4">
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <div class="small opacity-75">Total Spent</div>
                                <div class="fs-3 fw-bold">@FormatCurrency(Model.TotalSpent, Model.Currency)</div>
                            </div>
                            <div class="opacity-50">
                                <i class="bi bi-wallet2 fs-1"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-receipt text-muted" style="font-size: 64px;"></i>
                <h3 class="mt-4">No Payments Yet</h3>
                <p class="text-muted mb-4">Your payment history will appear here after your first purchase.</p>
                <a href="@Url.Action("Pricing", "Home")" class="btn btn-primary btn-lg">
                    View Pricing
                </a>
            </div>
        </div>
    }
</div>

@functions {
    string FormatCurrency(decimal amount, string currency)
    {
        return currency.ToUpperInvariant() switch
        {
            "USD" => $"${amount:N2}",
            "EUR" => $"\u20ac{amount:N2}",
            "GBP" => $"\u00a3{amount:N2}",
            "INR" => $"\u20b9{amount:N2}",
            _ => $"{currency} {amount:N2}"
        };
    }
}
