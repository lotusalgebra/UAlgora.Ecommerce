@model UAlgora.Ecommerce.LicensePortal.Models.SubscriptionsPageViewModel
@{
    ViewData["Title"] = "My Subscriptions";
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Account</a></li>
                    <li class="breadcrumb-item active">Subscriptions</li>
                </ol>
            </nav>
            <h1 class="mb-0">My Subscriptions</h1>
            <p class="text-muted mb-0">Manage your recurring payments</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Subscriptions.Any())
    {
        <div class="row g-4">
            @foreach (var sub in Model.Subscriptions)
            {
                <div class="col-lg-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                            <div>
                                <span class="badge bg-@GetTypeColor(sub.LicenseType) me-2">@sub.LicenseTypeName</span>
                                <span class="badge bg-@sub.StatusClass">@sub.StatusName</span>
                            </div>
                            <div>
                                @if (sub.PaymentProvider == "Stripe")
                                {
                                    <i class="bi bi-stripe text-primary fs-5" title="Stripe"></i>
                                }
                                else if (sub.PaymentProvider == "Razorpay")
                                {
                                    <span class="badge bg-info" title="Razorpay">Razorpay</span>
                                }
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-4">
                                <div>
                                    <div class="small text-muted">Billing Amount</div>
                                    <div class="fs-3 fw-bold text-primary">@sub.FormattedAmount</div>
                                    <div class="small text-muted">per @sub.BillingInterval</div>
                                </div>
                                <div class="text-end">
                                    <div class="small text-muted">Payments Made</div>
                                    <div class="fs-4 fw-semibold">@sub.PaymentCount</div>
                                </div>
                            </div>

                            <div class="row g-3 mb-3">
                                <div class="col-6">
                                    <div class="small text-muted">Current Period Start</div>
                                    <div class="fw-semibold">@sub.CurrentPeriodStart.ToString("MMM dd, yyyy")</div>
                                </div>
                                <div class="col-6">
                                    <div class="small text-muted">Current Period End</div>
                                    <div class="fw-semibold">@sub.CurrentPeriodEnd.ToString("MMM dd, yyyy")</div>
                                </div>
                            </div>

                            @if (sub.IsCancelled)
                            {
                                <div class="alert alert-secondary py-2 px-3 mb-0">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Cancelled on @sub.CancelledAt?.ToString("MMM dd, yyyy").
                                    Access continues until @sub.CurrentPeriodEnd.ToString("MMM dd, yyyy").
                                </div>
                            }
                            else if (sub.Status == UAlgora.Ecommerce.Core.Models.Domain.LicenseSubscriptionStatus.PastDue)
                            {
                                <div class="alert alert-warning py-2 px-3 mb-0">
                                    <i class="bi bi-exclamation-triangle me-1"></i>
                                    Payment is past due. Please update your payment method.
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center">
                                    @if (sub.AutoRenew)
                                    {
                                        <div class="text-success">
                                            <i class="bi bi-arrow-repeat me-1"></i>
                                            Auto-renews in @sub.DaysUntilRenewal days
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-warning">
                                            <i class="bi bi-exclamation-circle me-1"></i>
                                            Auto-renewal disabled
                                        </div>
                                    }
                                </div>
                            }

                            <div class="mt-3">
                                <div class="small text-muted">License Key</div>
                                <code class="text-muted">@sub.LicenseKey</code>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-top-0 pt-0">
                            @if (sub.CanCancel)
                            {
                                <button type="button" class="btn btn-outline-danger btn-sm"
                                        data-bs-toggle="modal"
                                        data-bs-target="#cancelModal-@sub.Id">
                                    <i class="bi bi-x-circle me-1"></i>
                                    Cancel Subscription
                                </button>
                            }
                            else if (sub.IsCancelled)
                            {
                                <a href="@Url.Action("Pricing", "Home")" class="btn btn-primary btn-sm">
                                    <i class="bi bi-arrow-repeat me-1"></i>
                                    Resubscribe
                                </a>
                            }
                        </div>
                    </div>
                </div>

                <!-- Cancel Modal -->
                @if (sub.CanCancel)
                {
                    <div class="modal fade" id="cancelModal-@sub.Id" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Cancel Subscription</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <form method="post" asp-action="CancelSubscription">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="SubscriptionId" value="@sub.Id" />
                                    <div class="modal-body">
                                        <p>Are you sure you want to cancel your <strong>@sub.LicenseTypeName</strong> subscription?</p>

                                        <div class="form-check mb-3">
                                            <input class="form-check-input" type="radio" name="CancelAtPeriodEnd" value="true" id="cancelEnd-@sub.Id" checked>
                                            <label class="form-check-label" for="cancelEnd-@sub.Id">
                                                <strong>Cancel at period end</strong>
                                                <small class="d-block text-muted">You'll retain access until @sub.CurrentPeriodEnd.ToString("MMMM dd, yyyy")</small>
                                            </label>
                                        </div>

                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="CancelAtPeriodEnd" value="false" id="cancelNow-@sub.Id">
                                            <label class="form-check-label" for="cancelNow-@sub.Id">
                                                <strong>Cancel immediately</strong>
                                                <small class="d-block text-muted">Access will end right away (no refund)</small>
                                            </label>
                                        </div>

                                        <div class="mt-3">
                                            <label class="form-label">Reason for cancellation (optional)</label>
                                            <textarea name="Reason" class="form-control" rows="2" placeholder="Help us improve..."></textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Keep Subscription</button>
                                        <button type="submit" class="btn btn-danger">Cancel Subscription</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-arrow-repeat text-muted" style="font-size: 64px;"></i>
                <h3 class="mt-4">No Active Subscriptions</h3>
                <p class="text-muted mb-4">Start a subscription to get automatic license renewals.</p>
                <a href="@Url.Action("Pricing", "Home")" class="btn btn-primary btn-lg">
                    View Plans
                </a>
            </div>
        </div>
    }
</div>

@functions {
    string GetTypeColor(UAlgora.Ecommerce.Core.Models.Domain.LicenseType type)
    {
        return type switch
        {
            UAlgora.Ecommerce.Core.Models.Domain.LicenseType.Trial => "secondary",
            UAlgora.Ecommerce.Core.Models.Domain.LicenseType.Standard => "primary",
            UAlgora.Ecommerce.Core.Models.Domain.LicenseType.Enterprise => "warning",
            _ => "secondary"
        };
    }
}
