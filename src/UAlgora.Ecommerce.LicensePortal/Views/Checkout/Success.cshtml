@model UAlgora.Ecommerce.LicensePortal.Models.SuccessViewModel
@{
    ViewData["Title"] = "Purchase Successful";
}

@section Styles {
    <style>
        .success-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 4rem 1rem;
            text-align: center;
        }

        .success-icon {
            width: 100px;
            height: 100px;
            background: linear-gradient(135deg, var(--algora-success), #059669);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 2rem;
            animation: pulse 2s ease-in-out infinite;
        }

        .success-icon i {
            font-size: 3rem;
            color: white;
        }

        @@keyframes pulse {
            0%, 100% { transform: scale(1); box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.4); }
            50% { transform: scale(1.05); box-shadow: 0 0 0 20px rgba(16, 185, 129, 0); }
        }

        .license-key-box {
            background: var(--algora-dark);
            color: white;
            padding: 1.5rem;
            border-radius: 12px;
            font-family: 'Courier New', monospace;
            font-size: 1.25rem;
            letter-spacing: 2px;
            margin: 2rem 0;
            position: relative;
        }

        .license-key-box .copy-btn {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(255,255,255,0.2);
            border: none;
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            cursor: pointer;
            transition: background 0.2s;
        }

        .license-key-box .copy-btn:hover {
            background: rgba(255,255,255,0.3);
        }

        .next-steps {
            background: white;
            border-radius: 16px;
            padding: 2rem;
            text-align: left;
            margin-top: 2rem;
        }

        .next-steps h5 {
            margin-bottom: 1.5rem;
        }

        .step-list {
            list-style: none;
            padding: 0;
            margin: 0;
            counter-reset: step;
        }

        .step-list li {
            position: relative;
            padding-left: 3rem;
            padding-bottom: 1.5rem;
            border-left: 2px solid #e2e8f0;
            margin-left: 1rem;
        }

        .step-list li:last-child {
            border-left: 2px solid transparent;
            padding-bottom: 0;
        }

        .step-list li::before {
            counter-increment: step;
            content: counter(step);
            position: absolute;
            left: -1rem;
            top: 0;
            width: 2rem;
            height: 2rem;
            background: var(--algora-primary);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 0.875rem;
        }

        .confetti {
            position: fixed;
            width: 10px;
            height: 10px;
            opacity: 0;
            animation: confetti-fall 3s ease-in-out forwards;
        }

        @@keyframes confetti-fall {
            0% { transform: translateY(-100vh) rotate(0deg); opacity: 1; }
            100% { transform: translateY(100vh) rotate(720deg); opacity: 0; }
        }
    </style>
}

<div class="success-container">
    <div class="success-icon">
        <i class="bi bi-check-lg"></i>
    </div>

    <h1 class="mb-3">Thank You for Your Purchase!</h1>
    <p class="lead text-muted mb-4">
        Your Algora Commerce license has been activated successfully.
        @if (!string.IsNullOrEmpty(Model.CustomerEmail))
        {
            <br><span>A confirmation email has been sent to <strong>@Model.CustomerEmail</strong></span>
        }
    </p>

    @if (Model.LicenseKey != "Processing...")
    {
        <div class="license-key-box">
            <span id="license-key">@Model.LicenseKey</span>
            <button class="copy-btn" onclick="copyLicenseKey()">
                <i class="bi bi-clipboard"></i> Copy
            </button>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-hourglass-split me-2"></i>
            Your license is being generated. You will receive it via email shortly.
        </div>
    }

    <p class="text-muted">
        Valid until: <strong>@Model.ValidUntil.ToString("MMMM d, yyyy")</strong>
    </p>

    <div class="next-steps">
        <h5><i class="bi bi-list-check me-2"></i>Next Steps</h5>
        <ol class="step-list">
            @foreach (var step in Model.NextSteps)
            {
                <li>@step</li>
            }
        </ol>
    </div>

    <div class="mt-4">
        <a href="/" class="btn btn-outline-primary me-2">
            <i class="bi bi-house me-1"></i> Back to Home
        </a>
        <a href="https://docs.algoracommerce.com" target="_blank" class="btn btn-primary">
            <i class="bi bi-book me-1"></i> Read Documentation
        </a>
    </div>
</div>

@section Scripts {
    <script>
        function copyLicenseKey() {
            const key = document.getElementById('license-key').textContent;
            navigator.clipboard.writeText(key).then(() => {
                const btn = document.querySelector('.copy-btn');
                btn.innerHTML = '<i class="bi bi-check"></i> Copied!';
                setTimeout(() => {
                    btn.innerHTML = '<i class="bi bi-clipboard"></i> Copy';
                }, 2000);
            });
        }

        // Confetti animation
        function createConfetti() {
            const colors = ['#6366f1', '#0ea5e9', '#10b981', '#f59e0b', '#ef4444'];
            for (let i = 0; i < 50; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                confetti.style.left = Math.random() * 100 + 'vw';
                confetti.style.background = colors[Math.floor(Math.random() * colors.length)];
                confetti.style.animationDelay = Math.random() * 2 + 's';
                confetti.style.animationDuration = (2 + Math.random() * 2) + 's';
                document.body.appendChild(confetti);

                setTimeout(() => confetti.remove(), 5000);
            }
        }

        createConfetti();
    </script>
}
