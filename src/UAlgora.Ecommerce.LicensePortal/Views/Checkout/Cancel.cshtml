@{
    ViewData["Title"] = "Payment Cancelled";
}

@section Styles {
    <style>
        .cancel-container {
            max-width: 500px;
            margin: 0 auto;
            padding: 4rem 1rem;
            text-align: center;
        }

        .cancel-icon {
            width: 100px;
            height: 100px;
            background: #fef3c7;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 2rem;
        }

        .cancel-icon i {
            font-size: 3rem;
            color: #f59e0b;
        }
    </style>
}

<div class="cancel-container">
    <div class="cancel-icon">
        <i class="bi bi-x-lg"></i>
    </div>

    <h1 class="mb-3">Payment Cancelled</h1>
    <p class="lead text-muted mb-4">
        Your payment was cancelled. No charges have been made to your account.
    </p>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Need Help?</h5>
            <p class="card-text text-muted">
                If you experienced any issues during checkout or have questions about our pricing,
                we're here to help.
            </p>
            <a href="mailto:support@algoracommerce.com" class="btn btn-outline-primary">
                <i class="bi bi-envelope me-1"></i> Contact Support
            </a>
        </div>
    </div>

    <div class="d-flex justify-content-center gap-3">
        <a href="/" class="btn btn-primary">
            <i class="bi bi-arrow-left me-1"></i> Back to Pricing
        </a>
    </div>

    <div class="mt-5">
        <p class="text-muted small">
            <strong>Still interested?</strong> You can also start with our free 14-day trial
            to explore all features before purchasing.
        </p>
        <a href="/checkout/trial" class="btn btn-outline-secondary btn-sm">
            Start Free Trial
        </a>
    </div>
</div>
