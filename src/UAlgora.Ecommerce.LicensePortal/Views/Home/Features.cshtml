@{
    ViewData["Title"] = "Features";
}

<section class="hero-section">
    <div class="container">
        <h1 class="hero-title">Powerful E-commerce for Umbraco</h1>
        <p class="hero-subtitle">
            Everything you need to build, run, and scale your online store - all within your familiar Umbraco backoffice.
        </p>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <!-- Feature Grid -->
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body p-4">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-box-seam text-primary" style="font-size: 2.5rem;"></i>
                        </div>
                        <h5>Product Management</h5>
                        <p class="text-muted">
                            Manage unlimited products with variants, categories, attributes, and rich media.
                            Support for digital and physical products.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body p-4">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-cart4 text-primary" style="font-size: 2.5rem;"></i>
                        </div>
                        <h5>Shopping Cart & Checkout</h5>
                        <p class="text-muted">
                            Customizable checkout flow with guest checkout, saved addresses,
                            and multiple payment gateways.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body p-4">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-receipt text-primary" style="font-size: 2.5rem;"></i>
                        </div>
                        <h5>Order Management</h5>
                        <p class="text-muted">
                            Complete order lifecycle management with status tracking, invoicing,
                            and fulfillment workflows.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body p-4">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-tags text-primary" style="font-size: 2.5rem;"></i>
                        </div>
                        <h5>Discounts & Promotions</h5>
                        <p class="text-muted">
                            Create powerful discount rules, coupon codes, automatic discounts,
                            and tiered pricing.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body p-4">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-truck text-primary" style="font-size: 2.5rem;"></i>
                        </div>
                        <h5>Shipping & Tax</h5>
                        <p class="text-muted">
                            Flexible shipping zones, rates, and carriers. GST-compliant tax calculation
                            with HSN/SAC codes.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body p-4">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-people text-primary" style="font-size: 2.5rem;"></i>
                        </div>
                        <h5>Customer Management</h5>
                        <p class="text-muted">
                            Customer accounts, address books, order history, wishlists,
                            and customer groups.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body p-4">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-gift text-primary" style="font-size: 2.5rem;"></i>
                        </div>
                        <h5>Gift Cards</h5>
                        <p class="text-muted">
                            Sell and redeem gift cards with customizable values,
                            expiration dates, and balance tracking.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body p-4">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-arrow-return-left text-primary" style="font-size: 2.5rem;"></i>
                        </div>
                        <h5>Returns & Refunds</h5>
                        <p class="text-muted">
                            Streamlined returns workflow with approval process,
                            partial refunds, and inventory restocking.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body p-4">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-graph-up text-primary" style="font-size: 2.5rem;"></i>
                        </div>
                        <h5>Analytics & Reports</h5>
                        <p class="text-muted">
                            Real-time dashboard with sales analytics, inventory reports,
                            and customer insights.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Enterprise Features -->
        <div class="mt-5 pt-5 border-top">
            <h2 class="text-center mb-5">Enterprise Features</h2>
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card h-100 border-primary">
                        <div class="card-body p-4">
                            <h5><i class="bi bi-shop text-primary me-2"></i>Multi-Store Support</h5>
                            <p class="text-muted mb-0">
                                Run multiple stores from a single Umbraco installation with separate
                                products, pricing, currencies, and branding for each store.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card h-100 border-primary">
                        <div class="card-body p-4">
                            <h5><i class="bi bi-currency-exchange text-primary me-2"></i>Multi-Currency</h5>
                            <p class="text-muted mb-0">
                                Display prices and accept payments in multiple currencies with
                                automatic exchange rate updates.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card h-100 border-primary">
                        <div class="card-body p-4">
                            <h5><i class="bi bi-building text-primary me-2"></i>B2B Features</h5>
                            <p class="text-muted mb-0">
                                Customer-specific pricing, quote requests, credit limits,
                                and company account management.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card h-100 border-primary">
                        <div class="card-body p-4">
                            <h5><i class="bi bi-palette text-primary me-2"></i>White Labeling</h5>
                            <p class="text-muted mb-0">
                                Remove Algora branding and customize the backoffice to match
                                your client's brand identity.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- CTA -->
        <div class="text-center mt-5 pt-5">
            <h3 class="mb-4">Ready to Get Started?</h3>
            <p class="text-muted mb-4">
                Try Algora Commerce free for 14 days. No credit card required.
            </p>
            <a href="/" class="btn btn-primary btn-lg">
                View Pricing <i class="bi bi-arrow-right ms-2"></i>
            </a>
        </div>
    </div>
</section>
